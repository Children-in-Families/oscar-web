.row
  .col-xs-12.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-heading
        %h4= t('.login')
      .panel-body
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          = f.error_notification
          .form-inputs
            = f.input :email, required: false, autofocus: true, label: t('.email')
            = f.input :password, required: false, label: t('.password')
            = f.input :remember_me, as: :boolean, label: t('.remember_me') if devise_mapping.rememberable?
          .form-actions
            = f.button :submit, t('.login'), class: 'btn btn-primary'
            or
            = render "devise/shared/links"
