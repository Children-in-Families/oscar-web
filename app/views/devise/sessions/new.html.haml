.row
  .col-xs-12.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
    .ibox.normal-space
      .ibox-title.text-center
        = image_tag(current_organization&.logo || 'OSCaR.png')
      .ibox-content
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          - if current_organization.children.any?
            %div{ style: "width: 100%; display: flex; justify-content: space-evenly; align-items: center; " }
              - current_organization.children.each do |child_ngo|
                %label
                  %input{ checked: false, name: "country", type: "radio", value: child_ngo.country, class: child_ngo.short_name, data: { url: request.url.gsub(/\/\/\w+\./, "//#{child_ngo.short_name}.") } }/
                  %img{ alt: "Option 1", src: image_url(country_to_flag(child_ngo.country)) }/
              %label
                %input{ checked: false, name: "country", type: "radio", value: 'dashboard', class: 'dashboard', data: { url: request.url } }/
                %img{ alt: "Option 1", src: image_url('dashboard_icon.png') }/

          = f.error_notification
          .form-inputs
            = f.input :email, required: false, autofocus: true, label: t('.email')
            = f.input :password, required: false, label: t('.password')
            -# = f.input :otp_code_token, label: t('.verification_code'), hint: t('.leave_this_blank_if_it_is_not_enabled')
            = f.input :remember_me, as: :boolean, input_html: { class: 'i-checks' }, label: t('.remember_me') if devise_mapping.rememberable?

            = f.submit t('.login'), class: 'btn btn-block btn-outline btn-primary btn-login'
            .text-center
              %hr
              = render "devise/shared/links"

= render 'country_option'
