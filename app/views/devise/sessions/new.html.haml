.row
  .col-xs-12.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-heading
        %h4 ចូល / Log in
      .panel-body
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          = f.error_notification
          .form-inputs
            = f.input :email, required: false, autofocus: true, label: 'អុីម៉ែល / Email'
            = f.input :password, required: false, label: 'លេខសំងាត់ / Password'
            = f.input :remember_me, as: :boolean, label: 'ចំណាំខ្ញុំ / Remember Me' if devise_mapping.rememberable?
          .form-actions
            = f.button :submit, 'ចូល / Log in', class: 'btn btn-primary'
            or
            = render "devise/shared/links"
