.row
  .col-xs-12.col-sm-6.col-sm-offset-3.form
    .panel.panel-default
      .panel-heading
        %h4 តើឣ្នកភ្លេចលេខសំងាត់? / Forgot your password?
      .panel-body
        = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          = f.error_notification
          .form-inputs
            = f.input :email, required: true, autofocus: true, label: 'អុីម៉ែល / Email'
          .form-actions
            = f.button :submit, 'ផ្ញើរសេចក្តីណែនាំដើម្បីផ្លាស់ប្ដូរលេខសំងាត់ / Send me reset password instructions', class: 'btn btn-primary'
