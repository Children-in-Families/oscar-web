= simple_form_for(@stage, title: "new stage") do |f|
  .panel-body
    = f.error_notification
    .form-inputs
      .row
        #non-stage.col-xs-12.col-md-2.no-label-form-group= f.input :non_stage, as: :boolean, label: t('.non_stage')
        #from-age.col-xs-12.col-md-4= f.input :from_age, as: :float, label: t('.from_age')
        #to-age.col-xs-12.col-md-4= f.input :to_age, as: :float, label: t('.to_age')
      %hr
      %h3.text-center= t('questions')
      %hr
      = f.simple_fields_for :able_screening_questions do |able_screening_question|
        = render 'able_screening_question_fields', f: able_screening_question
      .links
        = link_to_add_association t('.add_question'), f, :able_screening_questions, class: 'btn btn-primary btn-xs'
  .panel-footer
    .form-actions.text-right
      = link_to t('cancel'), stages_path, class: 'btn btn-default form-btn'
      = f.button :submit, t('save'), class: 'btn btn-primary form-btn'
