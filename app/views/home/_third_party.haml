            .col-xs-12.panel-pusher{style:"background-color:darkkhaki;"}
              %h1.anti-link
                #{@dashboard.referral_source_count}
              %h3.anti-link.float-right.box-escaper
                %i= t('.referral_sources')
      - if can? :manage?, User
        %div{ class: "#{dynamic_third_party_cols(current_user)} text-center" }
