.col-xs-12
  .panel.panel-default.bottom-panel
    .panel-body
      - if can? :manage?, Agency
        %div{ class: "#{dynamic_third_party_cols(current_user)} text-center" }
          =link_to agencies_path do
            .col-xs-12.panel-pusher{style:"background-color:darkseagreen;"}
              %h1.anti-link
                #{@dashboard.agency_count}
              %h3.anti-link.float-right
                %i= t('.agencies')
      - if can? :manage?, Partner
        %div{ class: "#{dynamic_third_party_cols(current_user)} text-center" }
          =link_to partners_path do
            .col-xs-12.panel-pusher{style:"background-color:cornflowerblue;"}
              %h1.anti-link
                #{@dashboard.partner_count}
              %h3.anti-link.float-right
                %i= t('.partners')
