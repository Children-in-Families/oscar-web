= simple_form_for [@client, @government_form] do |f|
  .ibox-content
    = f.input :name, as: :hidden
    = hidden_field_tag :form_num, params[:form]
    = error_notification(f)
    .row
      .col-xs-12
        %h2.text-center= 'ទម្រង់ទី៣: ផែនការសេវាសំរាប់ករណី​ និង គ្រួសារ'
      .col-xs-12.col-sm-6.col-md-4.form-group.date.optional.government_form_date{ class: ('has-error' if f.error :date) }
        %label.date.optional.control-label{ for: 'government_form_date' }
          = 'កាលបរិច្ឆេទ'
        .input-group.date
          = f.text_field :date, class: 'date optional form-control date-picker', type: 'text', name: 'government_form[date]', id: 'government_form_date'
          %span.input-group-addon.initial-referral
            %i.fa.fa-calendar-check-o
        = f.error :date
      .col-xs-12.col-sm-4
        = f.association :village, collection: @villages.map{|v| [v.code_format, v.id, { data: { code: v.code } }] }, label: 'លេខកូដភូមិ', input_html: { data: { type: 'villages' } }
      .col-xs-12.col-sm-4
        = f.input :client_code, label: 'លេខកូដកុមារ'
      .col-xs-12.col-sm-4.clearfix
        = f.input :case_worker_id, as: :select, collection: @users.map{|user| [user.name, user.id, selected: current_user.id == user.id] }, label: 'ឈ្មោះអ្នកកាន់ករណី'
      .col-xs-12
        %hr
        %h3= 'ផែនការសំរាប់ករណី(កុមារ)'
      .col-xs-12
        %h4= 'យកចំណាត់ថ្នាកទាប (១និង២) ពីទម្រង់ប៉ាន់ប្រមាណករណី និងគ្រួសារ មកធ្វើការជួយគាំទ្រ'
        = f.simple_fields_for :government_form_children_plans do |f_children_plan|
          = render 'children_plan_fields', f: f_children_plan
      .col-xs-12
        %hr
        %h3= 'ផែនការសំរាប់គ្រួសារ'
      .col-xs-12
        = f.simple_fields_for :government_form_family_plans do |f_family_plan|
          = render 'family_plan_fields', f: f_family_plan

  .ibox-footer
    = f.submit t('save'), class: 'btn btn-primary form-btn'
    = link_to t('cancel'), client_government_forms_path, class: 'btn btn-default form-btn'
