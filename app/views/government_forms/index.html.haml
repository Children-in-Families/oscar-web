.row
  .col-xs-12
    .ibox
      .ibox-title
        %h5= @client.name
      .ibox-content
        = link_to t('.back'), client_path(@client), { class: 'btn btn-default btn-form' }
        -# - if can? :manage, GovernmentForm
          = link_to t('.add_report'), new_client_government_form_path(@client), { class: "btn btn-primary btn-outline #{('disabled' if @government_form)}" }
        = link_to t('.add_form'), new_client_government_form_path(@client, name: 'ទម្រង់ទី១: ព័ត៌មានបឋម'), { class: "btn btn-primary btn-outline #{('disabled' if @government_form)}" }
        - if @government_form
          %table.table.table-bordered.reports
            %thead
              %tr
                %th= t('.code')
                %th= t('.initial_date')
                %th.text-center= t('.action')
            %tbody
              %tr
                %td= @government_form.code
                %td= @government_form.initial_date
                %td.action.text-center
                  = link_to client_government_form_path(@government_form.client, @government_form, format: :pdf), class: 'btn btn-outline btn-success btn-xs margin-left' do
                    = fa_icon('download')
                  - if can? :manage, GovernmentForm
                    = link_to edit_client_government_form_path(@government_form.client, @government_form), class: 'btn btn-outline btn-success btn-xs margin-left' do
                      = fa_icon('pencil')
                    = link_to client_government_form_path(@client, @government_form), method: :delete, data: { confirm: t('.are_you_sure_you_want_to_delete') }, class: 'btn btn-outline btn-danger btn-xs margin-left' do
                      = fa_icon('trash')
