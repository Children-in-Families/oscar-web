.nested-fields
  .field
    = f.input :family_plan_id, as: :hidden, label: false
    %p
      %strong= f.object.family_plan_name
    .row
      .col-xs-4
        = f.input :goal, label: 'គោលដៅ', input_html: { class: 'CharacterCount' }
        %span.countdown 0
        \/ 73 Character(s) Remaining
      .col-xs-4
        = f.input :action, label: 'ផែនការសកម្មភាព', input_html: { class: 'CharacterCount' }
        %span.countdown 0
        \/ 221 Character(s) Remaining
      .col-xs-4
        = f.input :result, label: 'លទ្ធផល', input_html: { class: 'CharacterCount' }
        %span.countdown 0
        \/ 73 Character(s) Remaining
