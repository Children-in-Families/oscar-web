= simple_form_for ([@client, @client_program_stream]) do |f|
  .ibox-content
    = f.simple_fields_for :enrollments, @enrollment do |ff|
      = ff.simple_fields_for :properties do |prop_f|
        - @program_stream.enrollment.each_slice(2) do |n_field|
          .row
            - n_field.each do |enrollment|
              .col-xs-12.col-md-6
                = render "/shared/fields/#{enrollment['type'].underscore}", f: prop_f, field_props: enrollment, errors: @program_stream.errors.messages
  .ibox-footer
    = hidden_field_tag :program_stream_id, @program_stream.id
    = f.submit t('.save'), class: 'btn btn-primary form-btn'
    = link_to t('.cancel'), client_client_program_streams_path(@client), class: 'btn btn-default form-btn'