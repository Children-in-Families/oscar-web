.row
  .col-xs-12
    .container
      .row  
        .col-xs-12
          = link_to t('.add_new_location'), new_location_path, class: 'btn btn-success btn-add'
      .row
        .col-xs-12
          .panel.panel-default
            .panel-heading
              %h3= t('.location')
            .panel-body
              .table-responsive
                %table.table.table-bordered.table-striped.table-hover
                  %thead
                    %tr
                      %th= t('.name')
                      %th.text-center{:colspan => "2"}
                        =t('.manage')
                  %tbody
                    - @locations.each do |location|
                      %tr
                        %td= location.name
                        %td.text-center
                          = link_to edit_location_path(location) do
                            %i.glyphicon.glyphicon-pencil
                        %td.text-center
                          - if location.has_no_any_progress_notes? && !location.is_other?
                            = link_to location, method: 'delete', data: { confirm: t('.are_you_sure') } do
                              %i.glyphicon.glyphicon-trash
                          - else
                            %i.glyphicon.glyphicon-trash

      .row
        .col-xs-12.text-center
          = will_paginate @locations, renderer: BootstrapPagination::Rails