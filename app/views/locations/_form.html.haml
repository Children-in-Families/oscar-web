= simple_form_for(location ||= Location.new) do |f|
  .modal.fade{id: "locationModal-#{location.id}", "aria-labelledby" => "locationModal-#{location.id}Label", :role => "dialog", :tabindex => "-1"}
    .modal-dialog{:role => "document"}
      .modal-content
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %h4.modal-title{ id: "locationModal-#{location.id}Label" }= t('.location')
        .modal-body
          = error_notification(f)
          .form-inputs
            = f.input :name, label: t('.name')
        .modal-footer
          .pull-left
            = f.submit t('.save') , class: 'btn btn-primary form-btn'
            %button.btn.btn-default{:type => "button"}= t('.cancel')
