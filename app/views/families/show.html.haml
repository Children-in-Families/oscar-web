.row
  .col-xs-12.family
    .panel.panel-default
      .panel-heading
        %h3
          = "General Information for #{@family.name} Family"
          - if can? :manage, :all
            %small
              = link_to edit_family_path(@family) do
                %i.glyphicon.glyphicon-pencil
              = removeable? @family, @family.cases_count

        %h4.row.family-summary
          %span.col-xs-6.col-sm-3.col-md-2 Address
          %span.col-xs-6.col-sm-9.col-md-10
            = ": #{@family.address}"
        %h4.row.family-summary
          %span.col-xs-6.col-sm-3.col-md-2 Member Count
          %span.col-xs-6.col-sm-9.col-md-10= ": #{pluralize(@family.member_count, 'Person')}"
      .panel-body
        .row
          .col-xs-6.col-sm-4.col-md-3.family-detail
            %strong Caregiver Information
          .col-xs-6.col-sm-8.col-md-9.family-detail
            = ": #{@family.caregiver_information}"
        .row
          .col-xs-6.col-sm-4.col-md-3.family-detail
            %strong Significant Family Member Count
          .col-xs-6.col-sm-8.col-md-9.family-detail
            = ": #{@family.significant_family_member_count}"
        .row
          .col-xs-6.col-sm-4.col-md-3.family-detail
            %strong Household Income
          .col-xs-6.col-sm-8.col-md-9.family-detail
            = ": #{number_to_currency @family.household_income}"
        .row
          .col-xs-6.col-sm-4.col-md-3.family-detail
            %strong Dependable Income?
          .col-xs-6.col-sm-8.col-md-9.family-detail
            = ": #{human_boolean(@family.dependable_income)}"
        .row
          .col-xs-6.col-sm-4.col-md-3.family-detail
            %strong Female Children Count
          .col-xs-6.col-sm-8.col-md-9.family-detail
            = ": #{@family.female_children_count.to_i}"
        .row
          .col-xs-6.col-sm-4.col-md-3.family-detail
            %strong Male Children Count
          .col-xs-6.col-sm-8.col-md-9.family-detail
            = ": #{@family.male_children_count.to_i}"
        .row
          .col-xs-6.col-sm-4.col-md-3.family-detail
            %strong Female Adult Count
          .col-xs-6.col-sm-8.col-md-9.family-detail
            = ": #{@family.female_adult_count.to_i}"
        .row
          .col-xs-6.col-sm-4.col-md-3.family-detail
            %strong Male Adult Count
          .col-xs-6.col-sm-8.col-md-9.family-detail
            = ": #{@family.male_adult_count.to_i}"
        .row
          .col-xs-6.col-sm-4.col-md-3.family-detail
            %strong Contract Date
          .col-xs-6.col-sm-8.col-md-9.family-detail
            = ':'
            = @family.contract_date.strftime('%B %d, %Y') if @family.contract_date
        .row
          .col-xs-6.col-sm-4.col-md-3.family-detail
            %strong Province
          .col-xs-6.col-sm-8.col-md-9.family-detail
            = ":"
            = @family.province.name if @family.province
        .row
          .col-xs-6.col-sm-4.col-md-3.family-detail
            %strong Family Type
          .col-xs-6.col-sm-8.col-md-9.family-detail
            = ":"
            = @family.family_type.titleize