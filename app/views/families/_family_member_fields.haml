.nested-fields
  .row
    .col-xs-12.col-sm-6.col-md-3
      = f.input :adult_name, label: t('activerecord.attributes.family_member.adult_name')
    .col-xs-12.col-sm-6.col-md-2
      .form-group.date.optional.family_family_members_date_of_birth
        %label.date.optional.control-label= t('.date_of_birth')
        .input-group.date
          = f.input_field :date_of_birth, class: 'date optional form-control date-picker', as: :string
          %span.input-group-addon
            %i.fa.fa-calendar-check-o
    - if policy(FamilyMember).show?(:gender)
      .col-xs-12.col-sm-6.col-md-2
        = f.input :gender

    - if policy(FamilyMember).show?(:occupation)
      .col-xs-12.col-sm-6.col-md-2
        = f.input :occupation, label: t('.occupation')
    - if policy(FamilyMember).show?(:relation)
      .col-xs-12.col-sm-6.col-md-3
        = f.input :relation, collection: drop_down_relation, label: t('.relation'), class: 'select2'
    - if policy(FamilyMember).show?(:guardian)
      .col-xs-12.col-sm-6.col-md-2
        %label= t('.guardian')
        .i-checks
          = f.input :guardian, type: 'checkbox', label: false, checked: f.object.guardian?, class: 'form-input'
    - if policy(FamilyMember).show?(:note)
      .col-xs-12.col-sm-6.col-md-4
        = f.input :note, label: t('.note')
  .row
    .col-xs-12.col-sm-6.col-md-1
      = link_to_remove_association t('.remove_member'), f, class: 'btn btn-danger btn-remove remove_member'
