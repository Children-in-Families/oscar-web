#remaining-programs-modal.modal.fade{ 'aria-hidden' => 'true', role: 'dialog' }
  .modal-dialog
    .modal-content.panel-warning
      .modal-header.panel-heading
        %button.close{ 'aria-hidden' => 'true', 'data-dismiss' => 'modal', type: 'button' } ×
        %h4.modal-title.text-center= t('.warning')
      .modal-body.text-center
        %p="This family is still actively enrolled in #{family.enrollments.active.count} programs. Please exit them from all programs before attempting to exit them from your organization."
        = link_to 'Click here to exit program', family_enrolled_programs_path(family)
        %br
        %br
        %p="គ្រួសារនេះមាន #{family.enrollments.active.count} កម្មវិធីដែលពំុទាន់បានចាកចេញ។សូមចាកចេញពីកម្មវិធីទាំងនោះមុនពេលដែលអ្នកព្យាយាមចាកចេញពីអង្គការរបស់អ្នក។"
        = link_to 'ចុចទីនេះដើម្បីចាកចេញពីកម្មវិធី', family_enrolled_programs_path(family)
      .modal-footer
        %button.btn.btn-default{ 'data-dismiss' => 'modal', type: 'button' }
          = t('.close')
