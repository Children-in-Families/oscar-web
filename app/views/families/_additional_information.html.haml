%h3= t('families.form.step_3_title')
%section.additional-information
  - get_or_build_family_quantitative_free_text_cases
  = f.simple_fields_for :family_quantitative_free_text_cases do |ff|
    - @quantitative_types.each do |quantitative_type|
      .row
        - if quantitative_type.free_text?
          = ff.input :id, as: :hidden
          = ff.input :quantitative_type_id, as: :hidden
          = ff.input :content, required: quantitative_type.is_required, label: quantitative_type.name, input_html: { rows: 5 }
        - else
          - if quantitative_type.multiple
            = f.input :quantitative_case_ids, required: quantitative_type.is_required, label: quantitative_type.name, collection: quantitative_type.quantitative_cases, label_method: :value, vlaue_method: :id, input_html: {multiple: true}
          - else
            = f.input :quantitative_case_ids, required: quantitative_type.is_required, label: quantitative_type.name, collection: quantitative_type.quantitative_cases, label_method: :value, vlaue_method: :id, input_html: {multiple: true, class: 'single-select'}
