%div{ class: "i-checks #{field_props['className']}" }
  %label{ class: required?(field_props['required'] || false) }
    %abbr{ title: 'required' }= '*' if field_props['required'] || false
    = field_props['label']
  = f.input field_props['name'], collection: field_props['values'].map { |f| [f['label'], f['value']] }, as: :check_boxes, required: field_props['required'], label: false, input_html: { title: field_props['description'] }
  %span.help-block
    = field_message(field_props['name'], errors)
