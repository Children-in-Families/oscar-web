%div{class: "form-group #{field_with(field_props['name'],errors)} "}
  %label{ class: required?(field_props['required'] || false) }
    %abbr{ title: 'required' }= '*' if field_props['required'] || false
    = field_props['label']
  = f.input field_props['label'], as: :text, required: field_props['required'], input_html: { class: field_props['className'] }, label: false
  %span.help-block
    = field_message(field_props['label'], errors)
