%div{ class: "form-group #{field_with(field_props['label'],errors)}" }
  %label{ class: required?(field_props['required'] || false) }
    %abbr{ title: 'required' }= '*' if field_props['required'] || false
    = field_props['label']
  = f.input field_props['label'], collection: field_props['values'].map { |f| [f['label'], f['label']] }, required: field_props['required'], prompt: field_props['placeholder'], input_html: { class: field_props['ClassName'], multiple: field_props['multiple'], name: "custom_field_property[properties][#{field_props['label']}]" }, label: false
  %span.help-block
    = field_message(field_props['label'], errors)
