%div{class: "form-group #{field_with(field_props['name'],errors)} "}
  %label{ class: required?(field_props['required'] || false) }
    %abbr{ title: 'required' }= '*' if field_props['required'] || false
    = field_props['label']
  = f.input field_props['label'], collection: field_props['values'].map { |f| [f['label'], f['value']] }, required: field_props['required'], input_html: { class: field_props['ClassName'], multiple: field_props['multiple'] }, label: false
  %span.help-block
    = field_message(field_props['label'], errors)
