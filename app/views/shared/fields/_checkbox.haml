  %label{ class: required?(field_props['required'] || false) }
    -# %abbr{ title: 'required' }= '*' if field_props['required'] || false
    = field_props['label']
  = f.input field_props['name'], as: :check_boxes, required: field_props['required'], label: false, input_html: { title: field_props['description'] }
