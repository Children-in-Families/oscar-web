%div{ class: "form-group #{field_with(field_props['label'],errors)}" }
  %label.control-label{ class: required?(field_props['required'] || false) }
    %abbr{ title: 'required' }= '*' if field_props['required'] || false
    = field_props['label']
  = f.input field_props['label'], as: :integer, required: (field_props['required'] || false), input_html: { class: field_props['className'], name: "#{f.object_name}[#{field_props['label']}]" }, label: false
  = error_message(controller_name, field_message(field_props['label'], errors))
