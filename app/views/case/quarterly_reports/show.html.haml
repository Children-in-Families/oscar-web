.row
  .col-xs-12.col-md-8.col-md-offset-2
    .panel.panel-default
      .panel-heading.text-center
        %h4
          = "Quarterly Report Information for #{@case.client.name} with ID #{@quarterly_report.code}"
      .panel-body
        = link_to 'Back', :back, {class: 'button btn btn-default'}
        %table.table.table-bordered.pushing-top
          %tr
            %td.spacing-first-col Date of Visit
            %td
              %strong
                = @quarterly_report.visit_date

          - if @quarterly_report.kinship?
            %tr
              %td.spacing-first-col KC Name
              %td
                %strong
                  = link_to @quarterly_report.case.client.name, client_path(@quarterly_report.case.client)

          - if @quarterly_report.foster?
            %tr
              %td.spacing-first-col FC Name
              %td
                %strong
                  = link_to @quarterly_report.case.client.name, client_path(@quarterly_report.case.client)
          %tr
            %td.spacing-first-col ID
            %td
              %strong
                = @quarterly_report.code
          %tr
            %td.spacing-first-col Describe general Health/Appearance
            %td
              %strong
                = @quarterly_report.general_health_or_appearance
          %tr
            %td.spacing-first-col What is the Child's school attendance/progress
            %td
              %strong
                = @quarterly_report.child_school_attendance_or_progress
          %tr
            %td.spacing-first-col Describe General Appearance of Home
            %td
              %strong
                = @quarterly_report.general_appearance_of_home
          %tr
            %td.spacing-first-col Describe any observations of drug, alchohol, abuse, etc.
            %td
              %strong
                = @quarterly_report.observations_of_drug_alchohol_abuse
          %tr
            %td.spacing-first-col If yes, desribe..
            %td
              %strong
                = @quarterly_report.describe_if_yes
          %tr
            %td.spacing-first-col Describe the family's current situationâ€¦
            %td
              %strong
                = @quarterly_report.describe_the_family_current_situation
          %tr
            %td.spacing-first-col Has the situation changed from the previous visit?
            %td
              %strong
                = @quarterly_report.has_the_situation_changed_from_the_previous_visit
          %tr
            %td.spacing-first-col How did I encourage the client?
            %td
              %strong
                = @quarterly_report.how_did_i_encourage_the_client
          %tr
            %td.spacing-first-col What future teachings/trainings could help the client?
            %td
              %strong
                = @quarterly_report.what_future_teachings_or_trainings_could_help_the_client
          %tr
            %td.spacing-first-col What is my plan for the next visit to the client?
            %td
              %strong
                = @quarterly_report.what_is_my_plan_for_the_next_visit_to_the_client
          %tr
            %td.spacing-first-col Money and supplies being used appropriately?
            %td
              %strong
                = @quarterly_report.money_and_supplies_being_used_appropriately
          %tr
            %td.spacing-first-col If no, how are they being misused?
            %td
              %strong
                = @quarterly_report.how_are_they_being_misused
          %tr
            %td.spacing-first-col Staff Information
            %td
              %strong
                = link_to @quarterly_report.staff_information.name, user_path(@quarterly_report.staff_information) if @quarterly_report.staff_information
          %tr
            %td.spacing-first-col Any Spiritual developments with the child or family?
            %td
              %strong
                = @quarterly_report.spiritual_developments_with_the_child_or_family
      