.task-form.nested-fields
  = f.hidden_field :domain_id, value: params[:domain_id]
  = f.hidden_field :relation, value: 'assessment'
  .col-md-6
    = f.text_field :name, class: 'form-control'
  .col-md-6
    .input-group.date
      = f.text_field :completion_date, class: 'date required form-control date-picker', id: 'task_completion_date'
      %span.input-group-addon
        %i.fa.fa-calendar-check-o
      %span.help-block.task_completion_date_help
  = link_to_remove_association "Remove Task", f
