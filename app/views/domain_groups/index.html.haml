.row
  .col-xs-12
    .container
      .row
        .col-xs-12
          = link_to t('.add_new_domain_group'), new_domain_group_path, class: 'btn btn-success btn-add'
      .row
        .col-xs-12
          .panel.panel-default
            .panel-heading
              %h3= t('.domain_groups')
            .panel-body
              .table-responsive
                %table.table.table-bordered.table-striped.table-hover
                  %thead
                    %tr
                      %th.custom_column_name= t('.domain_group_names')
                      %th.custom_column_description= t('.description')
                      %th.text-center.custom_column_manage{:colspan => "2"}
                        = t('.manage')
                      %th.modification.text-center= t('.modification')
                  %tbody
                    - @domain_groups.each do |domain_group|
                      %tr
                        %td= domain_group.name
                        %td= domain_group.description
                        %td.text-center
                          = link_to edit_domain_group_path(domain_group) do
                            %i.glyphicon.glyphicon-pencil
                        %td.text-center
                          = removeable? domain_group, domain_group.domains_count
                        %td.text-center
                          = link_to t('.view'), domain_group_version_path(domain_group)
      .row
        .col-xs-12.text-center
          = will_paginate @domain_groups, renderer: BootstrapPagination::Rails
