= simple_form_for([@family, @case]) do |f|
  .ibox-content
    = f.error_notification
    .form-inputs
      .row
        .col-xs-12.col-sm-6.col-md-4= f.input :carer_names, label: t('.carer_names')
        .col-xs-12.col-sm-6.col-md-4= f.input :carer_address, label: t('.carer_address')
        .col-xs-12.col-sm-6.col-md-4= f.input :carer_phone_number, label: t('.carer_phone_number')
      .row
        .col-xs-12.col-sm-6.col-md-4.form-group.date.optional.case_start_date{ class: ('has-error' if f.error :start_date) }
          %label.date.optional.control-label{ for: 'case_start_date' }
            %abbr{ title: 'required' } *
            = t('.start_date')
          .input-group.date
            = f.text_field :start_date, required: true, class: 'date optional form-control date-picker', type: 'text', name: 'case[start_date]', id: 'case_start_date'
            %span.input-group-addon
              %i.fa.fa-calendar-check-o
          = f.error :start_date

        .col-xs-12.col-sm-6.col-md-4= f.association :province, collection: @provinces, label: t('.province')
        .col-xs-12.col-sm-6.col-md-4= f.input :case_type, collection: family_case_type(@family), selected: 1, label: t('.case_type')
      .row
        .col-xs-12.col-sm-6.col-md-4= f.association :partner, collection: @partners, label: t('.ongoing_partner'), include_blank: false
        .col-xs-12.col-sm-6.col-md-4= f.association :client, collection: @clients.map{|client| [client.en_and_local_name.present? ? client.en_and_local_name : 'Unknown', client.id] }, include_blank: false, label: t('.client')
        .col-xs-12.col-sm-6.col-md-4= f.input :support_amount, label: "#{t('.support_amount')}($)"
      .row
        .col-xs-12.col-sm-6.col-md-4= f.input :support_note, input_html: { rows: 5 }, label: t('.support_note')
  .ibox-footer
    = f.submit t('save'), class: 'btn btn-primary form-btn'
    = link_to t('cancel'), family_path(@family), class: 'btn btn-default form-btn'
