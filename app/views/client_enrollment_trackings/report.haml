.row
  .col-xs-12
    .ibox
      .ibox-title
        %h5= @tracking.name
        .ibox-tools
          - unless @enrollment.program_stream.tracking_required?
            - if (policy(@enrollment).update?) && (can? :manage, ClientEnrollmentTracking)
              = link_to new_client_client_enrollment_client_enrollment_tracking_path(@client, @enrollment, tracking_id: @tracking, program_streams: params[:program_streams]) do
                .btn.btn-primary.btn-outline= t('.new_tracking')
          = link_to client_client_enrollment_client_enrollment_trackings_path(@client, @enrollment, tracking_id: @tracking.id, program_streams: params[:program_streams]) do
            .btn.btn-success.btn-outline= t('.back')
      .ibox-content
        - @client_enrollment_trackings.each_slice(2) do |n_enrollment_trackings|
          .row
            - n_enrollment_trackings.each do |enrollment_tracking|
              .col-xs-12
                .ibox.border-left-right.border-bottom
                  .ibox-title
                    %h5= t('.created_at')
                    %span.label.label-primary
                      = date_format(enrollment_tracking.created_at)
                    .ibox-tools
                      - if can? :manage, ClientEnrollmentTracking
                        - if policy(enrollment_tracking).update?
                          = link_to edit_client_client_enrollment_client_enrollment_tracking_path(@client, @enrollment, enrollment_tracking, tracking_id: enrollment_tracking.tracking, program_streams: params[:program_streams]) do
                            .btn.btn-success.btn-outline
                              = fa_icon('pencil')
                        = link_to client_client_enrollment_client_enrollment_tracking_path(@client, @enrollment, enrollment_tracking, tracking_id: enrollment_tracking.tracking), method: 'delete',  data: { confirm: t('.are_you_sure') } do
                          .btn.btn-danger.btn-outline
                            = fa_icon('trash')
                  .ibox-content
                    .table-responsive
                      %table.table.table-bordered
                        - tracking_report(enrollment_tracking).map{|field| [field['type'], field['label']]}.each do |type, key|
                          %tr
                            %td.align-justify
                              = key
                            %td.align-justify
                              - if type == 'file'
                                = render 'shared/form_builder/list_attachment', name: key, form_buildable: enrollment_tracking
                              - else
                              = display_custom_properties(enrollment_tracking.properties[key])
