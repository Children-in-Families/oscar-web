.row
  .col-xs-12
    = link_to client_client_enrollment_client_enrollment_trackings_path(@client, @enrollment, program_streams: params[:program_streams]) do
      .btn.btn-primary.btn-outline.pull-right
        = t('.trackings_list')
.row
  .col-xs-12
    .ibox
      .ibox-title
        %h5= @client_enrollment_tracking.tracking.try(:name)
        .ibox-tools
          - if (can? :manage, ClientEnrollmentTracking) && (policy(@client_enrollment_tracking).update?)
            = link_to edit_client_client_enrollment_client_enrollment_tracking_path(@client, @enrollment, @client_enrollment_tracking, tracking_id: @client_enrollment_tracking.tracking, program_streams: params[:program_streams]) do
              .btn.btn-success.btn-outline
                = fa_icon('pencil')
          = link_to report_client_client_enrollments_path(@client, program_stream_id: @program_stream, program_streams: params[:program_streams]) do
            .btn.btn-default.btn-back-default
              = t('.back')
      .ibox-content
        .table-responsive
          %table.table.table-bordered
            - @program_stream.trackings.fields.map{|field| field['label']}.each do |key|
              %tr
                %td.align-justify
                  = key.titleize
                %td.align-justify
                  = display_custom_properties(@tracking.fields[key])
