.row
  .col-xs-12
    .ibox
      .ibox-title
        %h5= t('.departments')
        .ibox-tools
          = link_to '#', {"data-target" => "#departmentModal-", "data-toggle" => "modal", :type => "button"} do
            .btn.btn-outline.btn-primary.btn-add
              = t('.add_new_department')
      .ibox-content
        .table-responsive
          %table.table.table-bordered.table-striped.table-hover
            %thead
              %tr
                %th.custom_column_name= t('.department_names')
                %th.custom_column_description= t('.description')
                %th.text-center.custom_column_manage{:colspan => "2"}
                  = t('.manage')
            %tbody
              - @departments.each do |department|
                %tr
                  %td= department.name
                  %td= department.description
                  %td.text-center
                    = link_to '#', {class: 'btn btn-outline btn-success btn-xs',
                                    'data-target': "#departmentModal-#{department.id}",
                                    'data-toggle': 'modal', type: 'button'} do
                      = fa_icon('pencil')
                  %td.text-center
                    = remove_link(department, { department_usercount: department.users_count })
                  = render 'form', department: department
      .ibox-footer
        = will_paginate @departments, renderer: BootstrapPagination::Rails
= render 'form'
