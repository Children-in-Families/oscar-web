= simple_form_for(@department) do |f|
  .panel-body
    = error_notification(f)

    .form-inputs
      = f.input :name, label: t('.name')
      = f.input :description, input_html: { rows: '4' }, label: t('.description')
  .panel-footer
    .form-actions
      = f.submit t('.save'), class: 'btn btn-primary form-btn'
      = link_to t('.cancel'), departments_path, class: 'btn btn-default form-btn'
