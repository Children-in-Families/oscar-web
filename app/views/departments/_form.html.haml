= simple_form_for(department ||= Department.new) do |f|
  .modal.fade{id: "departmentModal-#{department.id}", "aria-labelledby" => "departmentModal-#{department.id}Label", :role => "dialog", :tabindex => "-1"}
    .modal-dialog{:role => "document"}
      .modal-content
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %h4.modal-title{ id: "departmentModal-#{department.id}Label" }= t('.department')
        .modal-body
          = error_notification(f)
          .form-inputs
            = f.input :name, label: t('.name')
            = f.input :description, input_html: { rows: '10' }, label: t('.description')
        .modal-footer
          .pull-left
            = f.submit t('.save') , class: 'btn btn-primary form-btn', data: { disable_with: t('saving') }
            %button.btn.btn-default{:type => "button"}= t('.cancel')
