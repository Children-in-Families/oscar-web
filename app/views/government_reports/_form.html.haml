= simple_form_for [@government_report.client, @government_report], html: { class: 'form-inline' } do |f|
  .ibox-content
    = error_notification(f)
    .row
      .col-xs-12.form-group= f.input :code, label: t('.code')
      .col-xs-5.col-xs-offset-7
        %h4
          %p.text-center
            %strong= t('.kingdom_of_cambodia')
          %p.text-center
            %strong= t('.nation_religion_king')
      .col-xs-12.form-group= f.input :initial_capital, label: t('.capital')
      .col-xs-12.form-group= f.input :initial_city, label: t('.city')
      .col-xs-12.form-group= f.input :initial_commune, label: t('.commune')
      .col-xs-12.first-response-form.text-center
        %h4
          %strong= t('.first_response_form')
        %p= "(#{t('.for_children_who_are_in_danger')})"
        
      .col-xs-12.col-md-4.form-group.date.optional.initial_date
        %label.date.optional.control-label{ for: 'initial_date' }= t('.initial_date')
        .input-group.date.form-group
          = f.text_field :initial_date, class: 'date optional form-control date-picker', type: 'text'
          %span.input-group-addon
            %i.glyphicon.glyphicon-calendar
      .col-xs-12.col-md-4.form-group
        = f.input :client_slug, disabled: true, label: t('.client_code')

      .col-xs-12.col-md-4.form-group= f.input :commune, label: t('.commune')
      .col-xs-12.col-md-4.form-group= f.input :city, label: t('.city')
      .col-xs-12.col-md-4.form-group= f.input :capital, label: t('.capital')
      .col-xs-12.col-md-4.form-group= f.input :organisation_name, label: t('.organisation_name')
      .col-xs-12.col-md-4.form-group= f.input :organisation_phone_number, label: t('.phone_number')
      .col-xs-12.col-md-4.form-group= f.input :client_name, disabled: true, label: t('.client_name')
      .col-xs-12.col-md-4.form-group.date.optional.client_date_of_birth
        %label.date.optional.control-label{ for: 'client_date_of_birth' }= t('.date_of_birth')
        .input-group.date.form-group
          = f.text_field :client_date_of_birth, disabled: true, class: 'date optional form-control date-picker', type: 'text'
          %span.input-group-addon
            %i.glyphicon.glyphicon-calendar
      .col-xs-12.col-md-4.form-group.gender-lable
        = f.input :client_gender, collection: [[t('.male'), 'male'],[t('.female'), 'female']], as: :radio_buttons, label: t('.gender'), disabled: true, input_html: {class: 'i-checks'}
      .col-xs-12.col-md-4.form-group= f.input :found_client_at, label: t('.found_client_at')
      .col-xs-12.col-md-4.form-group= f.input :found_client_village, label: t('.village')
      .col-xs-12.col-md-4.form-group= f.input :education, label: t('.education')
      .col-xs-12.col-md-4.form-group= f.input :carer_name, disabled: true, label: t('.carer_name')
      .col-xs-12.col-md-4.form-group= f.input :client_contact, label: t('.client_contact')
      .col-xs-12
        %h5
          %strong= t('.carer_address')
      .col-xs-12.col-md-4.form-group= f.input :carer_house_number, label: t('.house_number')
      .col-xs-12.col-md-4.form-group= f.input :carer_street_number, label: t('.street_number')
      .col-xs-12.col-md-4.form-group= f.input :carer_village, label: t('.village')
      .col-xs-12.col-md-4.form-group= f.input :carer_commune, label: t('.commune')
      .col-xs-12.col-md-4.form-group= f.input :carer_city, label: t('.city')
      .col-xs-12.col-md-4.form-group= f.input :carer_capital, disabled: true, label: t('.capital')
      .col-xs-12.col-md-4.form-group= f.input :carer_phone_number, disabled: true, label: t('.phone_number')
      .col-xs-12.col-md-4.form-group.date.optional.case_information_date
        %label.date.optional.control-label.long-phrase{ for: 'case_information_date' }= t('.case_information_date')
        .input-group.date.form-group.case-info-date
          = f.text_field :client_initial_referral_date, disabled: true, class: 'date optional form-control date-picker', type: 'text'
          %span.input-group-addon
            %i.glyphicon.glyphicon-calendar
    .row
      .col-xs-12.col-md-4.form-group= f.input :referral_name, disabled: true, label: "#{t('.transfer_info')} #{t('.name')}"
      .col-xs-12.col-md-4.form-group= f.input :referral_position, label: t('.position')
    .row
      .col-xs-12= f.input :anonymous, label: "#{t('.or')} #{t('.anonymous_form')}", input_html: { class: 'i-checks'}
    .row
      .col-xs-12= f.input :anonymous_description, label: t('.anonymous_information'), input_html: { cols: '50', rows: '4' }
    .row
      .col-xs-12
        %h5
          %strong
            %span= "#{t('.danger_situation')} : #{t('.check')}"
            %span "
            %i.glyphicon.glyphicon-check
            %span "
            %span= t('.every_point')
    .row
      .col-xs-12
        .row
          .col-xs-12.col-md-6
            %p= "1- #{t('.family_separation')}"
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.abandoned')), disabled: true }
              %span= t('.abandoned')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.child_changed_home')), disabled: true }
              %span= t('.child_changed_home')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.family_changed_home')), disabled: true }
              %span= t('.family_changed_home')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.child_living_independently')), disabled: true }
              %span= t('.child_living_independently')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.orphan_lost_both_parents')), disabled: true }
              %span= t('.orphan_lost_both_parents')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.orphan_lost_father')), disabled: true }
              %span= t('.orphan_lost_father')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.orphan_lost_mother')), disabled: true }
              %span= t('.orphan_lost_mother')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.child_living_on_street')), disabled: true }
              %span= t('.child_living_on_street')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.other')), disabled: true }
              %span= t('.other')
          .col-xs-12.col-md-6
            %p= "2- #{t('.essential_needs')}"
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.food')), disabled: true }
              %span= t('.food')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.shelter')), disabled: true }
              %span= t('.shelter')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.case_education')), disabled: true }
              %span= t('.case_education')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.health_care_and_medical_treatment')), disabled: true }
              %span= t('.health_care_and_medical_treatment')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.parent_carer_poor_certificate_origin')), disabled: true }
              %span= t('.parent_carer_poor_certificate_origin')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.other')), disabled: true }
              %span= t('.other')
        .row
          .col-xs-12.col-md-6
            %p= "3- #{t('.abuse_and_exploitation')}"
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.physical_abuse')), disabled: true }
              %span= t('.physical_abuse')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.sexual_abuse')), disabled: true }
              %span= t('.sexual_abuse')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.emotional_abuse')), disabled: true }
              %span= t('.emotional_abuse')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.child_exploitation')), disabled: true }
              %span= t('.child_exploitation')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.exessive_child_labour')), disabled: true }
              %span= t('.exessive_child_labour')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.family_violence')), disabled: true }
              %span= t('.family_violence')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.experience_with_trafficking')), disabled: true }
              %span= t('.experience_with_trafficking')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.danger_of_trafficking')), disabled: true }
              %span= t('.danger_of_trafficking')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.neglect')), disabled: true }
              %span= t('.neglect')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.other')), disabled: true }
              %span= t('.other')
          .col-xs-12.col-md-6
            %p= "4- #{t('.disability_and_or_illness')}"
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.parent_carer_ill_origin')), disabled: true }
              %span= t('.parent_carer_ill_origin')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.child_ill')), disabled: true }
              %span= t('.child_ill')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.parent_carer_disabled')), disabled: true }
              %span= t('.parent_carer_disabled')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.child_disabled')), disabled: true }
              %span= t('.child_disabled')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.child_hiv_aids')), disabled: true }
              %span= t('.child_hiv_aids')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.parent_carer_hiv_aids_origin')), disabled: true }
              %span= t('.parent_carer_hiv_aids_origin')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.other')), disabled: true }
              %span= t('.other')
        .row
          .col-xs-12.col-md-6
            %p= "5- #{t('.drug_abuse_alcohol_and_gambling')}"
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.parent_carer_has_a_history_of_alcohol_abuse')), disabled: true }
              %span= t('.parent_carer_has_a_history_of_alcohol_abuse')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.parent_carer_has_a_history_of_drug_use')), disabled: true }
              %span= t('.parent_carer_has_a_history_of_drug_use')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.child_has_a_history_of_alcohol_abuse')), disabled: true }
              %span= t('.child_has_a_history_of_alcohol_abuse')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.child_has_a_history_of_drug_use')), disabled: true }
              %span= t('.child_has_a_history_of_drug_use')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.child_has_a_history_of_gambling')), disabled: true }
              %span= t('.child_has_a_history_of_gambling')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.parent_carer_has_a_history_of_gambling')), disabled: true }
              %span= t('.parent_carer_has_a_history_of_gambling')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.child_has_a_criminal_history')), disabled: true }
              %span= t('.child_has_a_criminal_history')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.parent_carer_has_a_criminal_history')), disabled: true }
              %span= t('.parent_carer_has_a_criminal_history')
            %p
              %input{ class: 'i-checks', type: 'checkbox', checked: checked?(t('.other')), disabled: true }
              %span= t('.other')

    .row
      .col-xs-12.col-md-5
        %h5
          %strong= "#{t('.client_living_with_guardians')}?"
      .col-xs-12.col-md-7
        %h5
          = f.input :client_living_with_guardian, as: :radio_buttons, collection: [[t('.positive'), true],[t('.negative'), false]], label: false, input_html: {class: 'i-checks'}
    .row
      .col-xs-12
        %h5
          %strong= t('.child_situation_and_need')
        %table.child-situation-needs
          %tr
            %td
            %td.text-center
              %p= t('.present_situation')
            %td.text-center
              %p= t('.need')
            %td.text-center
              %p= t('.intervention_plan')
          %tr
            %td= t('.physical_health')
            %td= f.input :present_physical_health, label: false, input_html: { cols: '30', rows: '3' }
            %td= f.input :physical_health_need, label: false, input_html: { cols: '30', rows: '3' }
            %td= f.input :physical_health_plan, label: false, input_html: { cols: '30', rows: '3' }
          %tr
            %td= "#{t('.supplies')}"
            %td= f.input :present_supplies, label: false, input_html: { cols: '30', rows: '3' }
            %td= f.input :supplies_need, label: false, input_html: { cols: '30', rows: '3' }
            %td= f.input :supplies_plan, label: false, input_html: { cols: '30', rows: '3' }
          %tr
            %td= t('.education')
            %td= f.input :present_education, label: false, input_html: { cols: '30', rows: '3' }
            %td= f.input :education_need, label: false, input_html: { cols: '30', rows: '3' }
            %td= f.input :education_plan, label: false, input_html: { cols: '30', rows: '3' }
          %tr
            %td= t('.communication_in_family')
            %td= f.input :present_family_communication, label: false, input_html: { cols: '30', rows: '3' }
            %td= f.input :family_communication_need, label: false, input_html: { cols: '30', rows: '3' }
            %td= f.input :family_communication_plan, label: false, input_html: { cols: '30', rows: '3' }
          %tr
            %td= t('.communication_in_society')
            %td= f.input :present_society_communication, label: false, input_html: { cols: '30', rows: '3' }
            %td= f.input :society_communication_need, label: false, input_html: { cols: '30', rows: '3' }
            %td= f.input :society_communication_plan, label: false, input_html: { cols: '30', rows: '3' }
          %tr
            %td= t('.emotional_health')
            %td= f.input :present_emotional_health, label: false, input_html: { cols: '30', rows: '3' }
            %td= f.input :emotional_health_need, label: false, input_html: { cols: '30', rows: '3' }
            %td= f.input :emotional_health_plan, label: false, input_html: { cols: '30', rows: '3' }
    .row
      .col-xs-12
        %h5
          %strong= t('.mission_obtainable')
        %ul.missions
          %li
            = f.input :mission_obtainable, collection: [[t('.none'), false],[t('.exist'), true]], as: :radio_buttons, label: false, input_html: {class: 'i-checks'}
          %li
            %span= "#{t('.if_exist')} (#{t('.check')}"
            %span "
            = fa_icon('check-square-o')
            %span "
            %span= "#{t('.missions_which_need_to_be_done')})"
            %ul.margin-mission-check#mission-checked
              %li
                = f.input :first_mission, disabled: (@government_report.mission_obtainable ? false : true), label: t('.first_mission'), input_html: { class: 'i-checks'}
              %li
                = f.input :second_mission, disabled: (@government_report.mission_obtainable ? false : true), label: t('.second_mission'), input_html: { class: 'i-checks'}
              %li
                = f.input :third_mission, disabled: (@government_report.mission_obtainable ? false : true), label: t('.third_mission'), input_html: { class: 'i-checks'}
              %li
                = f.input :fourth_mission, disabled: (@government_report.mission_obtainable ? false : true), label: t('.fourth_mission'), input_html: { class: 'i-checks'}
      .col-xs-12.col-md-3.col-md-offset-8
        %p.text-center.done-date
          %span.cell= t('.day')
          %span.cell.bottom-border
          %span.cell= t('.month')
          %span.cell.bottom-border
          %span.cell= t('.year')
          %span.cell.bottom-border
        %p.text-center
          %span= t('.organisation')
    .row
      .col-xs-12.col-md-3.col-md-offset-1
        %p.text-center.agreed-date
          %span.cell= t('.day')
          %span.cell.bottom-border
          %span.cell= t('.month')
          %span.cell.bottom-border
          %span.cell= t('.year')
          %span.cell.bottom-border
    .row
      .col-xs-12.col-md-3.col-md-offset-1
        %p.text-center= t('.seen_and_agreed')
        %p.text-center= t('.signature')

    .row
      .col-xs-12.copy
        %h5
          %strong= t('.copy')
        %p= "- #{t('.office')}"
  .ibox-footer
    .form-actions
      = f.submit t('save'), class: 'btn btn-primary form-btn'
      = link_to t('cancel'), client_government_reports_path, class: 'btn btn-default form-btn'
