.row
  .col-xs-12.user
    - @user.user_custom_fields.each do |user_custom_field|
      - if user_custom_field.properties_objs.blank?
        = link_to user_custom_field.custom_field.form_type, edit_user_user_custom_field_path(@user, user_custom_field), class: 'btn btn-success btn-xs small-btn-margin'
      - else
        = link_to user_custom_field.custom_field.form_type, user_user_custom_field_path(@user, user_custom_field), class: 'btn btn-success btn-xs small-btn-margin'
    .ibox.mini-margin
      .ibox-title
        %h5= "#{t('.general_info')} #{@user.name}"
        .ibox-tools
          %a.collapse-link
            .btn.btn-outline.btn-primary
              %i.fa.fa-chevron-up
          - if can? :manage, :all
            %small
              = link_to edit_user_path(@user) do
                .btn.btn-outline.btn-success
                  %i.fa.fa-pencil
              = remove_link(@user, {user_case: @user.cases_count}, 'btn-md')

      .ibox-content
        .row.user-summary
          .col-sm-12
            %table.table.table-bordered
              %tr
                %td.spacing-first-col
                  = t('.job_title')
                %td
                  %strong
                    = @user.job_title
              %tr
                %td.spacing-first-col
                  = t('.department')
                %td
                  %strong
                    = @user.department.name if @user.department
              %tr
                %td.spacing-first-col
                  = t('.mobile')
                %td
                  %strong
                    = "#{@user.mobile.phony_formatted(normalize: :KH, format: :international)}" if @user.mobile
              %tr
                %td.spacing-first-col
                  = t('.email')
                %td
                  %strong
                    - object_emails = @user.email.split(%r{;\s*}) if @user.email
                    - if object_emails
                      - object_emails.each do |object_email|
                        = mail_to object_email

              %tr
                %td.spacing-first-col
                  = t('.date_of_birth')
                %td
                  %strong
                    = @user.date_of_birth.strftime('%B %d, %Y') if @user.date_of_birth
              %tr
                %td.spacing-first-col
                  = t('.start_date')
                %td
                  %strong
                    = @user.start_date.strftime('%B %d, %Y') if @user.start_date

              %tr
                %td.spacing-first-col
                  = t('.province')
                %td
                  %strong
                    = @user.province.name if @user.province
= render 'clients'
