%br
.row
  .col-xs-4.col-xs-offset-4
    %h4=t('.can_view')
  .col-xs-4
    %h4=t('.can_edit')
= f.simple_fields_for :custom_field_permissions do |ff|
  .row
    .col-xs-4
      %label.permission_label= ff.object.user_custom_field_permission.form_title
      = ff.input :custom_field_id, value: ff.object.custom_field_id, as: :hidden
    .col-xs-4
      = ff.input :readable, label: false, input_html: { class: 'i-checks' }
    .col-xs-4
      = ff.input :editable, label: false, input_html: { class: 'i-checks' }
