- cache [Apartment::Tenant.current, client, 'exit_note', exit_ngos, params[:data]] do
  - if params[:data].presence == 'recent'
    - recent_record = exit_ngos.first&.exit_note
    - if recent_record.present?
      %ul
        %li= recent_record
  - else
    %ul
      - exit_ngos.each do |exit_ngo|
        - if exit_ngo.exit_note.present?
          %li= exit_ngo.exit_note
