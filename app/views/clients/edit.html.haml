.row
  .col-xs-12
    .ibox
      .ibox-title.edit-form
        %h5= t('.edit_client_title')
      .consent-forms
        - if @referral.present? && @referral.consent_forms.any?
          - @referral.consent_forms.each do |consent_form|
            = link_to t('.download_supporting_documents'), consent_form.url, class: 'btn btn-info btn-sm btn-download', target: target_blank(consent_form)
      .ibox-content
        = render 'form'
