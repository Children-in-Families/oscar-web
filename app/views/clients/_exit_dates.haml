- if params[:data].presence == 'recent'
  - recent_record = object.exit_ngos.most_recents.first&.exit_date
  - if recent_record.present?
    %ul{'data-exit_date': '' }
      %li= date_format(recent_record)
- else
  %ul{'data-exit_date': '' }
    - date_filter(object.exit_ngos.most_recents, 'exit_date').each do |exit_ngo|
      - if exit_ngo.exit_date.present?
        %li= date_format(exit_ngo.exit_date)
