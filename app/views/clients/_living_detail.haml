%h3= t('.living_detail')
%section
  #living-detail
    - unless @client.new_record?
      .row
        .col-xs-12.col-sm-6.col-md-8
          %h3= "#{@client.family_name} #{@client.given_name} #{@client.local_family_name} #{@client.local_given_name}"
          %h3= "#{@client.gender}  #{@client.date_of_birth}"
        .col-xs-12.col-sm-6.col-md-4
          %h3= "Client ID - #{current_organization.short_name} ###"
          = f.association :users, collection: @users, label: t('.case_worker_or_staff'), include_blank: false, multiple: true
    %legend= t('.contact_details')
    .row
      .col-xs-12.col-sm-6.col-md-4
        = f.input :live_with, label: t('.primary_carer_name')
      .col-xs-12.col-sm-6.col-md-4
        = f.input :telephone_number, label: t('.primary_carer_phone_number')
      .col-xs-12.col-sm-6.col-md-4
        - if f.object.current_address.present?
          = f.input :current_address, input_html: { rows: '6' }, label: t('.current_address')
      .col-xs-12.col-sm-6.col-md-4
        = f.association :province, collection: @province, label: t('.current_province')
      .col-xs-12.col-sm-6.col-md-4
        = f.association :district, collection: @districts, label: t('.district')
      .col-xs-12.col-sm-6.col-md-4
        = f.input :commune, label: t('.commune')
      .col-xs-12.col-sm-6.col-md-4
        = f.input :house_number, label: t('.house_number'), input_html:{ required: 'true'}
      .col-xs-12.col-sm-6.col-md-4
        = f.input :street_number, label: t('.street_number')
      .col-xs-12.col-sm-6.col-md-4
        = f.input :village, label: t('.village')
    %legend= t('.schooling')
    .row
      .col-xs-12.col-sm-6.col-md-4
        = f.input :school_name, label: t('.school_name')
      .col-xs-12.col-sm-6.col-md-4
        = f.input :school_grade, label: t('.school_grade')
      .col-xs-12.col-sm-6.col-md-4
        = f.input :main_school_contact, label: t('.main_school_contact')
