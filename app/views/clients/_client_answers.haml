#clientAnswer.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4#myModalLabel.modal-title= t('.client_able_answers')
      .modal-body
        - @ordered_client_answers.each do |answer|
          %p= "#{t('.question')}: #{answer.able_screening_question.question}"
          %p= "#{t('.answer')}: #{answer.description}"
          %hr
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"}= t('.close')
