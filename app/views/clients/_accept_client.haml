.modal.fade{ role: 'dialog', tabindex: '-1', id: 'accept-client' }
  .modal-dialog{ role: 'document'}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "#{t('client.enter_ngos.form.close')}", "data-dismiss" => 'modal'}
          %span{"aria-hidden" => 'true'} &times;
        %h4.modal-title
          = t('client.enter_ngos.form.accept_ngo_form')
      .modal-body
        = simple_form_for [@client, @client.enter_ngos.build] do |f|
          = f.error_notification
          .form-inputs
            .form-group.date
              %label.date.required.control-label
                %abbr{ title: 'required' } *
                = t('.accepted_date')
              .input-group
                = f.text_field :accepted_date, class: 'date form-control enter_date', type: 'text', readonly: 'readonly', name: 'enter_ngo[accepted_date]', data: { date_start_date: initial_referral_date_picker_format(@client) }
                %span.input-group-addon
                  %i.fa.fa-calendar-check-o

          .text-right
            %button.btn.btn-default{"data-dismiss" => 'modal'}= t('cancel')
            = f.submit t('client.enter_ngos.form.accept') , class: 'btn btn-success agree-btn', name: 'accept-client', data: { disable_with: t('client.enter_ngos.form.accepting') }
