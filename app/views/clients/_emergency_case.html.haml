- if ec.present? && ec.exited == false
  .row
    .col-xs-12.case#case
      .panel.panel-default
        .panel-heading
          %h3
            = 'Emergency Care'
            - if can? :manage, Case
              %small
                = link_to edit_client_case_path(ec.client, ec) do
                  %i.glyphicon.glyphicon-pencil

        .panel-body
          .row
            .col-xs-6.col-sm-4.col-md-3.case-detail
              %strong Start Date
            .col-xs-6.col-sm-8.col-md-9.case-detail
              = ':'
              = ec.start_date.strftime('%B %d, %Y') if ec.start_date
          .row
            .col-xs-6.col-sm-4.col-md-3.case-detail
              %strong Carer Names
            .col-xs-6.col-sm-8.col-md-9.case-detail
              = ": #{ec.carer_names}"
          .row
            .col-xs-6.col-sm-4.col-md-3.case-detail
              %strong Carer Address
            .col-xs-6.col-sm-8.col-md-9.case-detail
              = ": #{ec.carer_address}"
          .row
            .col-xs-6.col-sm-4.col-md-3.case-detail
              %strong Province
            .col-xs-6.col-sm-8.col-md-9.case-detail
              = ':'
              = ec.province.name if ec.province
          .row
            .col-xs-6.col-sm-4.col-md-3.case-detail
              %strong Carer Phone Number
            .col-xs-6.col-sm-8.col-md-9.case-detail
              = ": #{ec.carer_phone_number}"
          .row
            .col-xs-6.col-sm-4.col-md-3.case-detail
              %strong Support Amount
            .col-xs-6.col-sm-8.col-md-9.case-detail
              = ": #{number_to_currency(ec.support_amount)}"
          .row
            .col-xs-6.col-sm-4.col-md-3.case-detail
              %strong Support Note
            .col-xs-6.col-sm-8.col-md-9.case-detail
              = ": #{ec.support_note}"
          .row
            .col-xs-6.col-sm-4.col-md-3.case-detail
              %strong Ongoing Partner
            .col-xs-6.col-sm-8.col-md-9.case-detail
              = ":"
              = partner ec.partner if ec.partner
          .row
            .col-xs-6.col-sm-4.col-md-3.case-detail
              %strong Family
            .col-xs-6.col-sm-8.col-md-9.case-detail
              = ":"
              = family ec.family if ec.family
          .row
            .col-xs-6.col-sm-4.col-md-3.case-detail
              %strong Family Preservation
            .col-xs-6.col-sm-8.col-md-9.case-detail
              = ":"
              = ec.family_preservation? ? 'YES' : 'NO'
          - if ec.exit_date.present?
            .row
              .col-xs-6.col-sm-4.col-md-3.case-detail
                %strong Exit Date
              .col-xs-6.col-sm-8.col-md-9.case-detail
                = ':'
                = ec.exit_date.strftime('%B %d, %Y') if ec.exit_date
            .row
              .col-xs-6.col-sm-4.col-md-3.case-detail
                %strong Exit Note
              .col-xs-6.col-sm-8.col-md-9.case-detail
                = ": #{ec.exit_note}"
        - unless @client.cases.latest_foster.present? && @client.cases.latest_foster.exited == false || @client.cases.latest_kinship.present? && @client.cases.latest_kinship.exited == false
          .panel-footer
            %button.btn.btn-warning{"data-target" => '#exitECForm', "data-toggle" => 'modal'} Exit

  = render 'exit_ec_form', ec: @client.cases.latest_emergency
