%h4
  %label **
  %span= t('.filter_option')
  %label **
.well
  .row
    .col-xs-12{ class: current_setting.enable_hotline? ? 'col-md-3' : 'col-md-3' }
      #quantitative-type
        .row
          .col-xs-12
            .form-group
              = check_box_tag :nil, '1', quantitative_check, { class: 'i-checks quantitative-type-checkbox', id: 'quantitative-type-checkbox' }
              %label= t('.quantitative')

    .col-xs-12{ class: current_setting.enable_hotline? ? 'col-md-2' : 'col-md-3' }
      .custom-form-wrapper
        .row
          .col-xs-12
            .form-group
              = check_box_tag :nil, '1', custom_form_values.present?, { class: 'i-checks custom-form-checkbox', id: 'custom-form-checkbox' }
              %label= t('.custom_form')
        .row.custom-form
          .col-xs-12
            .form-group#custom-form-data{ data: { value: custom_form_values } }
              = select_tag(:nil, options_for_select(@custom_fields.map{|custom_field| [custom_field.form_title, custom_field.id] }, custom_form_values), { multiple: true, id: 'custom-form-select', class: 'form-control custom-form-select' } )

    .col-xs-12{ class: current_setting.enable_hotline? ? 'col-md-2' : 'col-md-3' }
      .program-stream-wrapper
        .row
          .col-xs-12
            .form-group
              = check_box_tag :nil, '1', program_stream_values.present?, { class: 'i-checks program-stream-checkbox', id: 'program-stream-checkbox' }
              %label= t('.program_stream')
        .row.program-stream
          .col-xs-12
            .form-group#program-stream-data{ data: { value: program_stream_values } }
              = select_tag(:nil, options_for_select(@program_streams.map{|p| [p.name, p.id] }, program_stream_values), { multiple: true, id: 'program-stream-select', class: 'form-control program-stream-select' } )
        .row
          .col-xs-12
            .program-association
              .form-group
                = check_box_tag :nil, '1', enrollment_check, { class: 'i-checks enrollment-checkbox', id: 'enrollment-checkbox' }
                %label= t('.enrollment')
              .form-group
                = check_box_tag :nil, '1', tracking_check, { class: 'i-checks tracking-checkbox', id: 'tracking-checkbox' }
                %label= t('.tracking')
              .form-group
                = check_box_tag :nil, '1', exit_form_check, { class: 'i-checks exit-form-checkbox', id: 'exit-form-checkbox' }
                %label= t('.exit_program')

    .col-xs-12{ class: current_setting.enable_hotline? ? 'col-md-2' : 'col-md-3' }
      .assessment-form-wrapper
        .row
          .col-xs-12
            .form-group
              = check_box_tag :nil, '1', assessment_values.present?, { class: 'i-checks assessment-checkbox', id: 'assessment-checkbox' }
              %label= t('.assessment_form')
        .row.assessment-form
          .col-xs-12
            .form-group#assessment-form-data{ data: { value: assessment_values } }
              = select_tag(:nil, assessment_options.empty? ? nil : options_for_select(assessment_options.map{|assessment| [assessment[1], assessment[0], assessment[2].presence || {}] }, assessment_values.empty? ? assessment_options.first[0] : assessment_values), { multiple: false, id: 'assessment-select', class: 'form-control assessment-select', include_blank: true })

    - if current_setting.enable_hotline?
      .col-xs-12.col-md-3
        .hotline-call-wrapper
          .row
            .col-xs-12
              .form-group
                = check_box_tag :nil, '1', hotline_check, { class: 'i-checks hotline-checkbox', id: 'hotline-checkbox' }
                %label= t('.hotline')

#opt-group-translation{ data: { enrollment: t('.enrollment'), tracking: t('.tracking'), exit_program: t('.exit_program'), basic_fields: t('.basic_fields'), custom_form: t('.custom_form'), quantitative: t('.quantitative'), custom_data: t('custom_data.title'), csi_domain_scores: t('.csi_domain_scores'), hotline: t('.hotline'), concern_basic_fields: t('.concern_basic_fields') } }
