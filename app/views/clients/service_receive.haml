.row
  .col-xs-12
    .ibox
      .ibox-title
        .row
          .col-xs-12.col-sm-6.co-md-6
            %h5
              = t('.service_received')
              = link_to_client_show(@client)
          .col-xs-12.col-sm-6.col-md-6
            .ibox-tools
              = link_to I18n.t('case_notes.index.back'), client_path(@client), { class: 'btn btn-default btn-back-default button' }
      .ibox-content
        .table-responsive
          %table.table.table-bordered.table-striped.table-hover
            %thead
              %tr
                %th= t('.task_completed_date')
                %th= t('.service_provided')
                %th.text-center= t('.done_by')
            %tbody
              - @tasks.each do |task_completed_date, tasks|
                %tr
                  %td= date_format(task_completed_date)
                  %td
                    %ul
                      - tasks.map(&:second).flatten.uniq.each do |service_delivery|
                        %li= service_delivery
                  %td= tasks.map(&:third).uniq.join(', ')
