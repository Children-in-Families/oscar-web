.row
  .col-xs-12
    .container
      .row
        .col-xs-12
          .panel.panel-default
            .panel-body
              .row
                .col-xs-12.col-sm-4.col-md-3
                  %h4
                    %u Version List
                  %ul.version-list
                    - @changelogs.each do |changelog|
                      %li.list
                        = link_to "#{changelog.version} - #{changelog.created_at.strftime('%d %B, %Y')}", "#changelog-#{changelog.id}"
                .col-xs-12.col-sm-8.col-md-9.changes
                  .row
                    .col-xs-12
                      %h4
                        %u Changes
                    - @changelogs.each do |changelog|
                      .col-xs-12.changes-item{ id: "changelog-#{changelog.id}" }
                        %h4= "#{changelog.version} - #{changelog.created_at.strftime('%d %B, %Y')}"
                        %div.changes-description
                          = changelog.description.html_safe


