.row
  .col-xs-12
    .container
      .row
        .col-xs-12
          = link_to t('.add_new_changelog'), new_changelog_path, class: 'btn btn-success btn-add'
      .row
        .col-xs-12
          .panel.panel-default
            .panel-heading
              %h3= t('.changelogs')
            .panel-body
              .table-responsive
                %table.table.table-bordered.table-striped.table-hover
                  %thead
                    %tr
                      %th= t('.version')
                      %th= t('.created_at')
                      %th= t('.manage')
                  %tbody
                    - @changelogs.each do |changelog|
                      %tr
                        %td= link_to changelog.version, changelog_path(changelog)
                        %td= changelog.created_at.strftime('%d %B, %Y')
                        %td.manage
                          - if can? :manage, Changelog, user_id: current_user.id
                            = link_to edit_changelog_path(changelog) do
                              %i.glyphicon.glyphicon-pencil
                            = link_to changelog, method: 'delete', data: { confirm: t('.are_you_sure') } do
                              %i.glyphicon.glyphicon-trash

      .row
        .col-xs-12.text-center
          = will_paginate @changelogs, renderer: BootstrapPagination::Rails
