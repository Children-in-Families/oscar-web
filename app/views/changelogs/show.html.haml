.row
  .col-xs-12
    .container
      .row
        .col-xs-12
          .panel.panel-default
            .panel-heading
              %h4
                = @changelog.version
                %small= @changelog.created_at.strftime('%d %B, %Y')
            .panel-body
              %p= @changelog.description.html_safe
            .panel-footer
              = link_to t('.back'), changelogs_path, class: 'btn btn-default btn-back'
