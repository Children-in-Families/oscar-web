%div{ class: "form-group #{field_with(field_props['label'],errors)}" }
  %label.control-label{ class: required?(field_props['required'] || false) }
    %abbr{ title: 'required' }= '*' if field_props['required'] || false
    = field_props['label'].html_safe
  = f.input field_props['label'], as: :integer, required: (field_props['required'] || false), input_html: { value: value, class: field_props['className'], name: "#{f.object_name}[#{field_props['label'].gsub('&amp;', '&').gsub('&lt;', '<').gsub('&gt;', '>')}]" }, label: false
  - if errors.present?
    %span.help-block
      = field_message(field_props['label'], errors)
  - else
    %span.help-block.hidden
      = t('cannot_be_blank')
