#current-custom-fields.tab-pane.active{role: "tabpanel"}
  .table-responsive
    %table.table.table-bordered.table-hover.table-striped.custom-field-table
      %thead
        %tr
          %th.form-title= t('.form_title')
          %th.entity-type= t('.entity_type')
          %th.organization= t('.organization')
          %th.copy.text-center= t('.copy')
      %tbody
        - @current_custom_fields.each do |custom|
          %tr
            %td.form-title= custom.form_title
            %td.entity-type= custom.entity_type
            %td.organization= custom.ngo_name
            %td.copy.text-center
              = link_to '#', class: 'copy-form' do
                = fa_icon('copy')
                %span{ data: { fields: custom.fields.to_json }}
