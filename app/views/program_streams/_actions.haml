= link_to program_stream_path(program_stream), class: 'btn btn-outline btn-info btn-xs' do
  = fa_icon('eye')
= link_to edit_program_stream_path(program_stream), class: 'btn btn-outline btn-success btn-xs' do
  = fa_icon('pencil')
= link_to program_stream_path(program_stream), method: 'delete',  data: { confirm: t('.are_you_sure') }, class: "btn btn-outline btn-danger btn-xs #{disable_delete_button(program_stream)}" do
  = fa_icon('trash')
