.text-area
  .row
    .col-xs-12.form-group{ class: html_column(full_width) }
      %label
        - if field_props['required']
          %abbr(title="required") *
        = field_props['label'].html_safe
  .row
    .col-xs-12.form-group{ class: html_column(full_width) }
      = text_area_tag field_props['label'], field_props['value'] || '', class: 'text form-control form-control'
