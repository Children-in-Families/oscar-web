#custom-field.modal.fade{ role: 'dialog' }
  .modal-dialog#width-modal
    .modal-content
      .modal-header
        %button{ class: "close", 'data-dismiss': 'modal' } &times
        %h4= t('.custom_fields')
      .modal-body
        %div
          %ul.nav.nav-tabs{role: "tablist"}
            %li.active{role: "presentation"}
              %a{"data-toggle": "tab", href: "#current-custom-fields", role: "tab"}
                = t('.my_ngo_custom_fields')
            - unless current_organization.try(:short_name) == 'mho'
              %li{role: "presentation"}
                %a{"data-toggle": "tab", href: "#all-custom-fields", role: "tab"}
                  = t('.all_ngos_custom_fields')
            - unless %w(demo mho).include?(current_organization.try(:short_name))
              %li{role: "presentation"}
                %a{"data-toggle": "tab", href: "#demo-custom-fields", role: "tab"}
                  = t('.demo_ngo_custom_fields')
          .tab-content
            = render 'my_ngo_custom_fields'
            - unless current_organization.try(:short_name) == 'mho'
              = render 'all_ngos_custom_fields'
            - unless %w(demo mho).include?(current_organization.try(:short_name))
              = render 'demo_ngo_custom_fields'
