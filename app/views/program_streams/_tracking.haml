%h4= t('.tracking_form')
%section
  #trackings{ data: { complete_tracking: t('.complete_tracking') } }
    = f.simple_fields_for :trackings, @tracking do |ff|
      = render 'tracking_fields', f: ff
    .links
      = link_to_add_association t('.add_tracking'), f, :trackings, class: 'btn btn-primary pull-right'
  #not-require-tracking
    = f.input :tracking_required, label: t('.not_require_tracking'), input_html: { class: 'i-checks' }

- custom_option_form_builder_tracking(@program_stream)
%div.hidden.tracking_select_option{"data-tracking-select-option" => "#{@select_option_tracking}"}
%div.hidden.tracking_checkbox_option{"data-tracking_checkbox_option" => "#{@checkbox_option_tracking}"}
%div.hidden.tracking_radio_option{"data-tracking_radio_option" => "#{@radio_option_tracking}"}