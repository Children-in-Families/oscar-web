%h4= t('.exit_form')
%section
  #exit-program
    %span.hidden= @program_stream.exit_program.to_json
  %label
    %i= t('.note')
  .text-danger= @program_stream.errors[:exit_program].join(' and ')
  = f.hidden_field :exit_program

- custom_option_form_builder_exit_program(@program_stream)
%div.hidden.exit_program_select_option{"data-exit_program-select-option" => "#{@select_option_exiting}"}
%div.hidden.exit_program_checkbox_option{"data-exit_program_checkbox_option" => "#{@checkbox_option_exiting}"}
%div.hidden.exit_program_radio_option{"data-exit_program_radio_option" => "#{@radio_option_exiting}"}