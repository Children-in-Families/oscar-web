.row
  .col-xs-12
    .ibox
      .ibox-title
        %h5= "#{@custom_field.form_title} "
        .ibox-tools
          - if can? :manage, FamilyCustomField
            = next_entity_type_custom_field(@family_custom_fields, @family, @custom_field)
            = link_to family_path(@family) do
              .btn.btn-outline.btn-success.button.form-btn
                = t('.back')
      .ibox-content
        .row
          - @family_custom_field.each do |family_custom_field|
            .col-xs-12.col-md-6
              .ibox.border-left-right.border-bottom
                .ibox-title
                  %h5
                    = t('.created_date')
                  %span.label.label-info
                    = date_format family_custom_field.created_at
                  .ibox-tools
                    - if can? :manage, FamilyCustomField
                      %small
                        = link_to edit_family_family_custom_field_path(@family, family_custom_field.id) do
                          .btn.btn-outline.btn-success
                            = fa_icon('pencil')
                      %small
                        = link_to family_family_custom_field_path(@family, family_custom_field.id, custom_field_id: family_custom_field.custom_field_id), method: :delete, data: { confirm: t('.are_you_sure') } do
                          .btn.btn-outline.btn-danger
                            = fa_icon('trash')
                .ibox-content
                  %table.table.table-bordered
                    - family_custom_field.properties_objs.each do |key, value|
                      %tr
                        %td.align-justify
                          = key.titleize
                        %td.align-justify
                          = display_custom_properties(value)
      .ibox-footer.text-center
        = paginate @family_custom_field
