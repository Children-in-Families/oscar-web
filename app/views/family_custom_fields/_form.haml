.ibox
  = simple_form_for([@family, @family_custom_field]) do |f|
    .ibox-title
      %h5= @family_custom_field.custom_field.form_type
    .ibox-content
      = render "shared/properties", custom_field: @family_custom_field.custom_field, f: f, entity: @family_custom_field
    .ibox-footer
      = f.submit 'Save', class: 'btn btn-primary form-btn'
      = link_to 'Back', family_family_custom_field_path(@family,@family_custom_field), class: 'btn btn-default form-btn'
