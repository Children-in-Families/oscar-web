.row
  .col-xs-12
    .ibox
      .ibox-title
        %h5= @progress_note.date.strftime('%d %B, %Y')
        .ibox-tools
          %a.collapse-link
            .btn.btn-outline.btn-primary
              %i.fa.fa-chevron-up
          = link_to edit_client_progress_note_path(@client, @progress_note) do
            .btn.btn-outline.btn-success
              = fa_icon('pencil')
          = link_to [@client, @progress_note], method: 'delete', data: { confirm: t('.are_you_sure') } do
            .btn.btn-outline.btn-danger
              = fa_icon('trash')
      .ibox-content
        .row
          .col-sm-12
            %table.table.table-bordered
              %tr
                %td.spacing-first-col
                  = t('.child')
                %td
                  %strong
                    = @progress_note.client
              %tr
                %td.spacing-first-col
                  = t('.staff')
                %td
                  %strong
                    = @progress_note.user
              %tr
                %td.spacing-first-col
                  = t('.progress_note_type')
                %td
                  %strong
                    = @progress_note.progress_note_type
              %tr
                %td.spacing-first-col
                  = t('.location')
                %td
                  %strong
                    = @progress_note.location
              %tr
                %td.spacing-first-col
                  = t('.other_location')
                %td
                  %strong
                    = @progress_note.other_location
              %tr
                %td.spacing-first-col
                  = t('.interventions')
                %td
                  %strong
                    - if @progress_note.interventions.any?
                      = @progress_note.interventions.pluck(:action).join(', ')
              %tr
                %td.spacing-first-col
                  = t('.material')
                %td
                  %strong
                    = @progress_note.material
              %tr
                %td.spacing-first-col
                  = t('.goals_addressed')
                %td
                  %strong
                    - if @progress_note.assessment_domains.any?
                      = @progress_note.assessment_domains.pluck(:goal).join(', ')
              %tr
                %td.spacing-first-col
                  = t('.response')
                %td
                  %strong
                    = @progress_note.response.html_safe

              %tr
                %td.spacing-first-col
                  = t('.additional_notes')
                %td
                  %strong
                    = @progress_note.additional_note.html_safe
              %tr
                %td.spacing-first-col
                  = t('.documents')
                %td
                  %strong
                    - @progress_note.attachments.each do |attachment|
                      = link_to original_filename(attachment), client_progress_note_attachment_path(@client, @progress_note, attachment)
      .ibox-footer
        .row
          .col-xs-12
            = link_to t('.back'), client_progress_notes_path(@client), class: 'btn btn-default btn-back'
