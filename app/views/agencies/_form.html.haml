= simple_form_for(@agency) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name, label: 'ឈ្មោះអង្គភាព / Name'
    = f.input :description, input_html: { rows: '4' }, label: 'ការបរិយាយពីអង្គភាព / Description'

  .form-actions
    = f.submit 'រក្សាទុក / Save' , class: 'btn btn-primary'
    = link_to 'ទុកជាមោឃៈ / Cancel', agencies_path, class: 'btn btn-default'
