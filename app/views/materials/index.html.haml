.row
  .col-xs-12
    .container
      .row  
        .col-xs-12
          = link_to t('.add_new_material'), new_material_path, class: 'btn btn-success btn-add'
      .row
        .col-xs-12
          .panel.panel-default
            .panel-heading
              %h3= t('.material')
            .panel-body
              .table-responsive
                %table.table.table-bordered.table-striped.table-hover
                  %thead
                    %tr
                      %th= t('.status')
                      %th.text-center{:colspan => "2"}
                        =t('.manage')
                  %tbody
                    - @materials.each do |material|
                      %tr
                        %td= material.status
                        %td.text-center
                          = link_to edit_material_path(material) do
                            %i.glyphicon.glyphicon-pencil
                        %td.text-center
                          - if material.has_no_any_progress_notes?
                            = link_to material, method: 'delete', data: { confirm: t('.are_you_sure') } do
                              %i.glyphicon.glyphicon-trash
                          - else
                            %i.glyphicon.glyphicon-trash

      .row
        .col-xs-12.text-center
          = will_paginate @materials, renderer: BootstrapPagination::Rails