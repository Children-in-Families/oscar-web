.row
  .col-xs-12
    = link_to 'New Custom Form', new_custom_field_path, class: 'btn btn-primary'
.row
  .col-xs-12
    .ibox
      .ibox-content
        %table.table.table-hover
          %thead
            %th Entity Name
            %th.text-center{ colspan: 2 } Action

          - @custom_fields.each do |custom_field|
            %tr
              %td= link_to custom_field.entity_name, custom_field
              %td.text-right
                = link_to edit_custom_field_path(custom_field), class: 'btn btn-outline btn-success btn-xs' do
                  = fa_icon('pencil')
              %td
                = link_to custom_field, class: 'btn btn-outline btn-danger btn-xs', method: :delete, data: { confirm: 'Are you sure you want to delete?' } do
                  = fa_icon('trash')
