.row
  .col-xs-12
    .ibox
      .ibox-title
        %h4= @custom_field.form_title
      .ibox-content
        .row
          .col-xs-12.col-md-8
            .build-wrap{ 'data-fields': @custom_field.fields }
      .ibox-footer
        = link_to t('.edit'), edit_custom_field_path(@custom_field), class: "btn btn-primary form-btn"
        = link_to t('.back'), custom_fields_path, class: 'btn btn-default form-btn'
