.row
  .col-xs-12
    .ibox
      .ibox-title
        %h4= @custom_field.form_title
      .ibox-content.hide-custom-field
        - @custom_field.fields.each do |field|
          = render "program_streams/fields/#{field['type'].underscore}", field_props: field, full_width: false
      .ibox-footer
        - if current_organization.full_name != @custom_field.ngo_name
          = link_to t('.copy'), new_custom_field_path(custom_field_id: @custom_field.id, ngo_name: @custom_field.ngo_name), class: 'btn btn-primary form-btn'
        - else
          = link_to t('.edit'), edit_custom_field_path(@custom_field), class: 'btn btn-primary form-btn'
        - if action_search?
          = link_to t('.back'), request.referrer, class: 'btn btn-default form-btn'
        - else
          = link_to t('.back'), custom_fields_path, class: 'btn btn-default form-btn'
