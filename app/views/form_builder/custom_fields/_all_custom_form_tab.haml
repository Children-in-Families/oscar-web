#all-custom-form.tab-pane{role: "tabpanel"}
  .table-responsive
    %table.table.table-bordered.table-hover
      %thead
        %th= t('.form_title')
        %th= t('.type')
        %th= t('.frequency')
        %th= t('.organization')
        - if can? :manage, CustomField
          %th.manage.text-center= t('.manage')
      %tbody
        - @all_custom_fields.each do |custom_field|
          %tr
            %td= custom_field.form_title
            %td= custom_field.entity_type
            %td= frequency_note(custom_field)
            %td= custom_field.ngo_name
            - if can? :manage, CustomField
              %td.manage.text-center
                = link_to preview_custom_fields_path(custom_field_id: custom_field.id, ngo_name: custom_field.ngo_name), class: 'btn btn-outline btn-primary btn-xs' do
                  = fa_icon('eye')
                = link_to new_custom_field_path(custom_field_id: custom_field.id, ngo_name: custom_field.ngo_name), class: 'btn btn-outline btn-success btn-xs margin-btn' do
                  = fa_icon('files-o')
