= simple_form_for(@partner) do |f|
  .ibox-content
    = error_notification(f)
    .form-inputs
      .row
        .col-xs-12.col-sm-6.col-md-4= f.input :name, label: t('.name')
        .col-xs-12.col-sm-6.col-md-4= f.input :contact_person_name, label: t('.contact_name')
        .col-xs-12.col-sm-6.col-md-4= f.input :contact_person_email, label: t('.contact_email')
        .col-xs-12.col-sm-6.col-md-4= f.input :contact_person_mobile, label: t('.contact_mobile')
        .col-xs-12.col-sm-6.col-md-4= f.association :province, collection: @province, label: t('.province')
        .col-xs-12.col-sm-6.col-md-4= f.input :address, input_html: { rows: '4' }, label: t('.address')
        .col-xs-12.col-sm-6.col-md-4
          .form-group.date.optional.partner_start_date
            %label.date.optional.control-label{ for: 'partner_start_date' } #{t('.start_date')}
            .input-group.date
              = f.text_field :start_date, class: 'date optional form-control date-picker', type: 'text', name: 'partner[start_date]', id: 'partner_start_date'
              %span.input-group-addon
                %i.fa.fa-calendar-check-o
          .form-group.string.optional.partner_engagement
            %label.string.optional.control-label{:for => "partner_engagement"}
            = t('.engagement')
            %a{:role => "button", :tabIndex => "0",  data: { toggle: "popover", trigger: "focus", content: "#{I18n.t('inline_help.partner.engagement')}", placement: "auto" } }
              = fa_icon "info-circle", class: 'text-info m-xs'
            = f.input :engagement, label: false
        .col-xs-12.col-sm-6.col-md-4
          .form-group.select.optional.partner_organization_type
            %label.select.optional.control-label{:for => "partner_organization_type_id"}
            = t('.organization_type')
            %a{:role => "button", :tabIndex => "0",  data: { toggle: "popover", html: 'true', trigger: "focus", content: "#{I18n.t('inline_help.partner.organization_type')}", placement: "auto" } }
              = fa_icon "info-circle", class: 'text-info m-xs'
            = f.association :organization_type, collection: @organization_types, label: false
          -# = f.input :affiliation, label: t('.affiliation')
        .col-xs-12.col-sm-6.col-md-4
          .form-group.text.optional.partner_background
            %label.text.optional.control-label{:for => "partner_background"}
            = t('.background')
            %a{:role => "button", :tabIndex => "0",  data: { toggle: "popover", trigger: "focus", content: "#{I18n.t('inline_help.partner.background')}", placement: "auto" } }
              = fa_icon "info-circle", class: 'text-info m-xs'
            = f.input :background, input_html: { style: 'height: 107px;' }, label: false
  .ibox-footer
    = f.submit t('save'), class: 'btn btn-primary form-btn', data: { disable_with: t('saving') }
    - if @partner.persisted?
      = link_to t('cancel'), partner_path(@partner), class: 'btn btn-default form-btn'
    - else
      = link_to t('cancel'), partners_path, class: 'btn btn-default form-btn'
