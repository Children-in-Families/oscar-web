.row
  .col-xs-12
    .pull-left
      %button.btn.btn-primary.btn-filter{"aria-expanded" => 'false', "data-target" => '#partner-search-form', "data-toggle" => 'collapse', type: 'button'}
        %i.fa.fa-filter
    .pull-right
      - if can? :manage, Partner
        = link_to "#{I18n.t('partners.index.add_new_partner')}", new_partner_path, class: 'btn btn-primary'
      = link_to "#{I18n.t('partners.index.export_xls')}", current_url(format: 'xls'), class: 'btn btn-info btn-export'
.row.ibox-space
  .col-xs-12
    .ibox.float-e-margins#partner-search-form.collapse
      .ibox-content
        = datagrid_form_for @partner_grid, url: partners_url, html: { class: 'grid-form' }
.row
  .col-xs-12
    .ibox.float-e-margins
      .ibox-title
        %h5= @partner_grid.assets.count
        %span.label.label-info= t('.results')
        .ibox-tools
          %a.collapse-link
            %i.fa.fa-chevron-up
          %a.fullscreen-link
            %i.fa.fa-expand
      .ibox-content
        = datagrid_table @partner_grid, html: { class: 'table table-bordered table-striped table-hover partners'}
      .ibox-footer
        = will_paginate @partner_grid.assets, renderer: BootstrapPagination::Rails
