.row
  .col-xs-12.partner
    - @partner.partner_custom_fields.each do |partner_custom_field|
      - if partner_custom_field.properties_objs.blank?
        - if can? :manage, PartnerCustomField
          = link_to partner_custom_field.custom_field.form_title, edit_partner_partner_custom_field_path(@partner, partner_custom_field), class: 'btn-xs btn btn-success small-btn-margin'
      - else
        = link_to partner_custom_field.custom_field.form_title, partner_partner_custom_field_path(@partner, partner_custom_field), class: 'btn-xs btn btn-success small-btn-margin'
    .ibox.mini-margin
      .ibox-title
        %h5
          = "#{t('.general_info')} #{@partner.name}"
          = "(#{@partner.organisation_type})" if @partner.organisation_type.present?
        .ibox-tools
          %a.collapse-link
            .btn.btn-outline.btn-primary
              %i.fa.fa-chevron-up
          - if can? :manage, Partner
            %small
              = link_to edit_partner_path(@partner) do
                .btn.btn-outline.btn-success
                  %i.fa.fa-pencil
              = remove_link(@partner, {partner_case: @partner.cases_count}, 'btn-md')

      .ibox-content
        .row.partner-summary
          .col-sm-12
            %table.table.table-bordered
              %tr
                %td.spacing-first-col
                  = t('.address')
                %td
                  %strong
                    = @partner.address
              %tr
                %td.spacing-first-col
                  = t('.contact_name')
                %td
                  %strong
                    = @partner.contact_person_name
              %tr
                %td.spacing-first-col
                  = t('.contact_email')
                %td
                  %strong
                    = mail_to @partner.contact_person_email
              %tr
                %td.spacing-first-col
                  = t('.contact_mobile')
                %td
                  %strong
                    = @partner.contact_person_mobile.phony_formatted(normalize: :KH, format: :international) if @partner.contact_person_mobile
              %tr
                %td.spacing-first-col
                  = t('.affiliation')
                %td
                  %strong
                    = @partner.affiliation
              %tr
                %td.spacing-first-col
                  = t('.engagement')
                %td
                  %strong
                    = @partner.engagement
              %tr
                %td.spacing-first-col
                  = t('.background')
                %td
                  %strong
                    = @partner.background
              %tr
                %td.spacing-first-col
                  = t('.start_date')
                %td
                  %strong
                    = @partner.start_date.strftime('%B %d, %Y') if @partner.start_date

              %tr
                %td.spacing-first-col
                  = t('.province')
                %td
                  %strong
                    = "#{@partner.province.name}" if @partner.province
