.panel.panel-default
  .panel-heading
    %h3= t('clients.form.case_note')
  .panel-body
    .row
      .col-xs-12.col-sm-4
        %label.control-label
          %abbr{ title: 'required' }= '*'
        %label.control-label= t('shared.max_x', x: t('clients.form.case_note'))
    .row
      .col-xs-12.col-sm-4
        .form-group
          = f.input :max_case_note, label: false
      .col-xs-12.col-sm-4
        .form-group
          = f.input :case_note_frequency, collection: [['Day', 'day'], ['Week', 'week'], ['Month', 'month'], ['Year', 'year']], input_html: {class: 'select2'}, label: false

- if Organization.ratanak?
  .panel.panel-default
    .panel-heading
      %h3= t('.case_note_edit_limit')
    .panel-body
      .row
        .col-xs-12.col-sm-4
          %label.control-label
            %abbr{ title: 'required' }= '*'
          %label.control-label= t('shared.max_x', x: t('clients.form.case_note'))
      .row
        .col-xs-12.col-sm-4
          .form-group
            = f.input :case_note_edit_limit, label: false
        .col-xs-12.col-sm-4
          .form-group
            = f.input :case_note_edit_frequency, collection: [['Day', 'day'], ['Week', 'week'], ['Month', 'month'], ['Year', 'year']], input_html: {class: 'select2'}, label: false
