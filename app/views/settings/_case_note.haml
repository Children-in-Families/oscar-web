.panel.panel-default
  .panel-heading
    %h3= t('.case_note')
  .panel-body
    .row
      .col-xs-12.col-sm-4
        .form-group
          = f.input :case_note_frequency, label: t('.case_note_frequency'), collection: [['Daily', 'day'], ['Weekly', 'week'], ['Monthly', 'month'], ['Yearly', 'year']], input_html: {class: 'select2'}

      .col-xs-12.col-sm-4
        .form-group
          = f.input :max_case_note, label: t('.max_case_note')
