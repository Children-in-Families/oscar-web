.panel.panel-default
  .panel-heading
    %h3= t('.assessment_score_order')
  .panel-body
    .row
      .col-xs-12
        = f.input :assessment_score_order, as: :radio_buttons, label: false, input_html: {class: 'ichecks-radio_buttons'}

.panel.panel-default
  .panel-heading
    %h3= t('.assessment_strictness')
  .panel-body
    .row
      .col-xs-12
        = f.input :disable_required_fields, input_html: { class: 'i-checks' }

.panel.panel-default
  .panel-heading
    %h3= t('.delete_incomplete_assessment')
  .panel-body
    .row
      .col-xs-12
        = f.input :never_delete_incomplete_assessment, input_html: { class: 'i-checks' }
    .row#delete-incomplete-time{ style: f.object.never_delete_incomplete_assessment? && 'display: none;' }
      .col-xs-6.col-sm-1
        = f.input :delete_incomplete_after_period_value, input_html: { min: 1 }, label: false
      .col-xs-6.col-sm-2
        = f.input :delete_incomplete_after_period_unit, collection: [['Days', 'days'], ['Weeks', 'weeeks'], ['Months', 'months']], label: false
