.panel.panel-default
  .panel-heading
    %h3 Assessment Score Order
  .panel-body
    .row
      .col-xs-12
        = f.input :assessment_score_order, as: :radio_buttons, label: false, input_html: {class: 'ichecks-radio_buttons'}

.panel.panel-default
  .panel-heading
    %h3 Assessment Strictness
  .panel-body
    .row
      .col-xs-12
        = f.input :disable_required_fields, as: :radio_buttons, input_html: {class: 'ichecks-radio_buttons'}, collection: [['ON', true], ['OFF', false]], label: false
