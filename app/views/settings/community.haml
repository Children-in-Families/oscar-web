.row
  .col-xs-12
    = simple_form_for @setting do |f|
      .ibox
        .ibox-title
          %h5.text-center= t('.title')
        .ibox-content
          .i-checks.client-forms
            %label= t('.hide_community')
            = f.input :hide_community, as: :radio_buttons, collection: [[t('yes'), true],[t('no'), false]], label: false
        .ibox-footer
          = f.submit t('save'), name: 'client_forms' ,class: 'btn btn-primary', data: { disable_with: t('saving') }
