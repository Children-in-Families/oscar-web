.row
  .col-xs-12
    = simple_form_for @setting, url: finance_dashboard_settings_path, method: :put do |f|
      .ibox
        .ibox-title
          %h5.text-center Finance Dashboard
        .ibox-content
          .i-checks.integration
            %label Display finance dashboard
            .form-group
              .radio
                %label
                  = radio_button_tag "setting[finance_dashboard]", 'true', @setting.finance_dashboard?
                  Yes
              .radio
                %label
                  = radio_button_tag "setting[finance_dashboard]", 'false', !@setting.finance_dashboard?
                  No
        .ibox-footer
          = f.submit t('save'),class: 'btn btn-primary', data: { disable_with: t('saving') }
