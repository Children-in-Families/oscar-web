#internal-referral-setting.panel.panel-default
  .panel-heading
    %h3= t('internal_referrals.index.internal_referral')
  .panel-body
    .row
      .col-xs-12.col-sm-4
        %label.control-label= t('shared.max_x', x: t('internal_referrals.index.internal_referral_edit_duration'))
    .row
      .col-xs-12.col-sm-4
        .form-group
          = f.input :internal_referral_limit, label: false
      .col-xs-12.col-sm-4
        .form-group
          = f.input :internal_referral_frequency, collection: [['Day', 'day'], ['Week', 'week'], ['Month', 'month'], ['Year', 'year']], input_html: {class: 'select2'}, label: false
