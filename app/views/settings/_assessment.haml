#assessment-setting.panel.panel-default
  .panel-heading
    %h3
      = t('.assessment')
      .pull-right
        = f.input_field :disable_assessment, class: 'i-checks', as: :boolean
        %label= t('.disable_assessment')
  .panel-body
    .row
      .col-xs-12.col-sm-4
        %label.control-label= t('.min_assessment')
      .col-xs-12.col-sm-4
        %label.control-label= t('.max_assessment')
    .row
      .col-xs-12.col-sm-4
        .form-group
          = f.input :min_assessment, label: false
      .col-xs-12.col-sm-4
        .form-group
          = f.input :max_assessment, label: false
      .col-xs-12.col-sm-4
        .form-group
          = f.input :assessment_frequency, collection: [['Day', 'day'], ['Week', 'week'], ['Month', 'month'], ['Year', 'year']], input_html: { class: 'select2' }, label: false
