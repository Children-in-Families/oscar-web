.panel.panel-default
  .panel-heading
    %h3= t('.assessment')
  .panel-body
    .row
      .col-xs-12.col-sm-4
        .form-group
          = f.input :assessment_frequency, label: t('.assessment_frequency'), collection: [['Daily', 'day'], ['Weekly', 'week'], ['Monthly', 'month']], input_html: {class: 'select2'}

      .col-xs-12.col-sm-4
        .form-group
          = f.input :min_assessment, label: t('.min_assessment')

      .col-xs-12.col-sm-4
        .form-group
          = f.input :max_assessment, label: t('.max_assessment')
