.panel.panel-default
  .panel-heading
    %h3= t('clients.form.case_note')
  .panel-body
    .row
      .col-xs-12
        .i-checks
          %label= t('.require_case_note', note: t('case_notes.form_with_assessment_domains.note'))
          = f.input :required_case_note_note, as: :radio_buttons, collection: [['Yes', true],['No', false]], label: false
    .row
      .col-xs-12
        .i-checks
          %label= t('.hide_case_note', note: t('case_notes.form_with_assessment_domains.note'))
          = f.input :hide_case_note_note, as: :radio_buttons, collection: [['Yes', true],['No', false]], label: false
