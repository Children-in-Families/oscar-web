#assessment-setting.panel.panel-default
  .panel-heading
    %h3
      = t('.assessment')
  .panel-body
    .row
      / .col-xs-12.col-sm-4
      /   %label.control-label= t('.min_assessment')
      .col-xs-12.col-sm-3
        %label.control-label
          %abbr{ title: 'required' }= '*'
        %label.control-label= t('.custom_assessment')
      .col-xs-12.col-sm-3
        %label.control-label
          %abbr{ title: 'required' }= '*'
        %label.control-label= t('.max_assessment')
      -# .col-xs-12.col-sm-push-3.col-sm-3
      -#   %label.control-label
      -#     %abbr{ title: 'required' }= '*'
      -#   %label.control-label= t('.eligible')

    .row
      / .col-xs-12.col-sm-4
      /   .form-group
      /     = f.input :min_assessment, label: false
      .col-xs-12.col-sm-3
        .form-group
          = f.input :custom_assessment, label: false
      .col-xs-12.col-sm-3
        .form-group
          = f.input :max_custom_assessment, label: false
      .col-xs-12.col-sm-3
        .form-group
          = f.input :custom_assessment_frequency, collection: [['Month', 'month'], ['Year', 'year']], input_html: { class: 'select2' }, label: false
      -# .col-xs-12.col-sm-3
      -#   .form-group
      -#     = f.input :custom_age, placeholder: t('.age'), label: false
    .row
      .col-xs-12
        %p
          %i= t('.noted')
