#case-conference-setting.panel.panel-default
  .panel-heading
    %h3= t('case_conferences.index.case_conference')
  .panel-body
    .row
      .col-xs-12.col-sm-4
        %label.control-label= t('shared.max_x', x: t('case_conferences.index.case_conference_edit_duration'))
    .row
      .col-xs-12.col-sm-4
        .form-group
          = f.input :case_conference_limit, label: false
      .col-xs-12.col-sm-4
        .form-group
          = f.input :case_conference_frequency, collection: [['Day', 'day'], ['Week', 'week'], ['Month', 'month'], ['Year', 'year']], input_html: {class: 'select2'}, label: false
