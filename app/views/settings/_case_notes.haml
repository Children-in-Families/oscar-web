.panel.panel-default
  .panel-heading
    %h3= t('.case_note')
  .panel-body
    .row
      .col-xs-12.col-sm-4
        %label.control-label
          %abbr{ title: 'required' }= '*'
        %label.control-label= t('shared.max_x', x: t('clients.form.case_note'))
    .row
      .col-xs-12.col-sm-4
        .form-group
          = f.input :max_case_note, label: false
      .col-xs-12.col-sm-4
        .form-group
          = f.input :case_note_frequency, collection: [['Day', 'day'], ['Week', 'week'], ['Month', 'month'], ['Year', 'year']], input_html: {class: 'select2'}, label: false

    - if Organization.ratanak?
      .row
        .col-xs-12.col-sm-4
          .i-checks.research-module
            %label=  t('.disable_future_completion_date')
            = f.input :disabled_future_completion_date, as: :radio_buttons, collection: [['Yes', true],['No', false]], label: false
