.row
  .col-xs-12
    = simple_form_for @setting do |f|
      .ibox
        .ibox-title
          %h5.text-center= t('.client_forms')
        .ibox-content
          - if current_organization.country != 'nepal'
            .i-checks.client-forms
              %label= t('.hotline')
              = f.input :enable_hotline, as: :radio_buttons, collection: [[I18n.t('settings.client_forms.yes'), true],[I18n.t('settings.client_forms.no'), false]], label: false
          .i-checks.client-forms.hide
            %label= t('.client_forms')
            = f.input :enable_client_form, as: :radio_buttons, collection: [[I18n.t('settings.client_forms.yes'), true],[I18n.t('settings.client_forms.no'), false]], label: false
        .ibox-footer
          = f.submit t('save'), name: 'client_forms' ,class: 'btn btn-primary', data: { disable_with: t('saving') }
