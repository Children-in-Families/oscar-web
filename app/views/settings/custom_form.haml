.row
  .col-xs-12
    = simple_form_for @setting do |f|
      .ibox
        .ibox-title
          %h5.text-center= t('layouts.side_menu.custom_fields')
        .ibox-content
          #custom-form-setting.panel.panel-default
            .panel-heading
              %h3= t('layouts.side_menu.custom_form_limit')
            .panel-body
              .row
                .col-xs-12.col-sm-4
                  %label.control-label= t('shared.max_x', x: t('layouts.side_menu.custom_form_limit'))
              .row
                .col-xs-12.col-sm-4
                  .form-group
                    = f.input :custom_field_limit, label: false
                .col-xs-12.col-sm-4
                  .form-group
                    = f.input :custom_field_frequency, collection: [['Day', 'day'], ['Week', 'week'], ['Month', 'month'], ['Year', 'year']], input_html: {class: 'select2'}, label: false
        .ibox-footer
          = f.submit t('save'), class: 'btn btn-primary', data: { disable_with: t('saving') }