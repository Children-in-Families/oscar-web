.row.border-bottom
  %nav.navbar.navbar-static-top.bg{:role => "navigation", :style => "margin-bottom: 0"}
    .navbar-header
      %a.navbar-minimalize.minimalize-styl-2.btn.btn-primary{:href => "#"}
        %i.fa.fa-bars
    %ul.nav.navbar-top-links.navbar-right
      %li.dropdown
        %a.dropdown-toggle.count-info{"data-toggle" => "dropdown", :href => "#"}
          %i.fa.fa-bell
          - if @notification_count.positive?
            %span.label.label-primary= @notification_count
        %ul.dropdown-menu.dropdown-alerts
          - if @overdue_tasks.any?
            %li
              %div
                = link_to tasks_path do
                  %i.fa.fa-tasks.fa-fw
                  = t('.overdue_tasks_count', count: @overdue_tasks.count)
                  / = t('.check_tasks')
            %li.divider
          - if @due_today_tasks.any?
            %li
              %div
                = link_to tasks_path do
                  %i.fa.fa-tasks.fa-fw
                    = t('.due_today_tasks_count', count: @due_today_tasks.count)
                    / = t('.check_tasks')
            %li.divider
          - unless @overdue_assessments_count.zero?
            %li
              %div.notify-margin
                %i.fa.fa-tasks.fa-fw
                = t('.overdue_assessments_count', count: @overdue_assessments_count)
            %li.divider
          - unless @due_today_assessments_count.zero?
            %li
              %div.notify-margin
                %i.fa.fa-tasks.fa-fw
                = t('.due_today_assessments_count', count: @due_today_assessments_count)
      %li
        - if I18n.locale == :km
          = link_to t('.en'), url_for(params.merge({locale: 'en'}))
        - else
          = link_to t('.km'), url_for(params.merge({locale: 'km'}))
