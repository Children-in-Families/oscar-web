%li.dropdown
  %a.dropdown-toggle.count-info{"data-toggle" => "dropdown", :href => "#"}
    %i.fa.fa-bell
    - if @notification.count >= 1
      %span.label.label-primary= @notification.count
  %ul.dropdown-menu.dropdown-alerts.animated.fadeInRight
    - if @notification.any_overdue_tasks?
      %li
        %div
          = link_to tasks_path do
            %i.fa.fa-tasks.fa-fw
            = t('.overdue_tasks_count', count: @notification.overdue_tasks_count)
      %li.divider
    - if current_user.admin? || current_user.ec_manager?
      - if @notification.ec_notification(83).count >= 1
        %li
          %div
            = link_to clients_path("client_grid[status]":"Active EC", "client_grid[case_type]":"EC", "client_grid[placement_date]": [(Date.today-83.to_i).strftime("%Y-%m-%d"),(Date.today-83.to_i).strftime("%Y-%m-%d")]) do
              %i.fa.fa-tasks.fa-fw
              = t('.client_notification', count: @notification.ec_notification(83).count)
        %li.divider
      - if @notification.ec_notification(90).count >= 1
        %li
          %div
            = link_to clients_path("client_grid[status]":"Active EC", "client_grid[case_type]":"EC", "client_grid[placement_date]": [(Date.today-90.to_i).strftime("%Y-%m-%d"),(Date.today-90.to_i).strftime("%Y-%m-%d")]) do
              %i.fa.fa-tasks.fa-fw
              = t('.client_notification_today', count: @notification.ec_notification(90).count)
        %li.divider
    - if @notification.any_due_today_tasks?
      %li
        %div
          = link_to tasks_path do
            %i.fa.fa-tasks.fa-fw
            = t('.due_today_tasks_count', count: @notification.due_today_tasks_count)
      %li.divider
    - if @notification.any_overdue_assessments?
      %li
        %div.notify-margin
          %i.fa.fa-tasks.fa-fw
          = t('.overdue_assessments_count', count: @notification.overdue_assessments_count)
      %li.divider
    - if @notification.any_due_today_assessments?
      %li
        %div.notify-margin
          %i.fa.fa-tasks.fa-fw
          = t('.due_today_assessments_count', count: @notification.due_today_assessments_count)
    - if @notification.count.zero?
      %li
        %div.notify-margin
        %p.text-center
          = t('.no_task')
