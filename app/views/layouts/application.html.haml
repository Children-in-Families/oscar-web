!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}

    %title CIF

    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = javascript_include_tag 'https://code.highcharts.com/highcharts.js'
    = csrf_meta_tags

  %body{id: "#{controller_name}-#{params[:action]}", class: 'pace-done'}
    = render 'layouts/identifier' if Rails.env.staging?
    #wrapper{:class => "#{params[:controller]}.#{params[:action]}"}
      = render 'layouts/side_menu'
      #page-wrapper{:class => "gray-bg #{@extra_class}"}
        = render 'layouts/top_navbar'
        = yield
      -# = render 'layouts/alert'
    = render 'layouts/footer'
