!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %title OSCaR - Open Source Case-management and Record-keeping

    :javascript
      function pageNumber() {
        var vars={};
        var x=document.location.search.substring(1).split('&');
        for(var i in x) {var z=x[i].split('=',2);vars[z[0]] = decodeURIComponent(z[1]);}
        var x=['frompage','topage','page','webpage','section','subsection','subsubsection'];
        for(var i in x) {
          var y = document.getElementsByClassName(x[i]);
          for(var j=0; j<y.length; ++j) y[j].textContent = vars[x[i]];
        }
      }

    %link{:crossorigin => "anonymous", :href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", :integrity => "sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7", :rel => "stylesheet"}

    :css
      body {
        font-size: 12px;
        margin: 0;
        padding: 0;
      }
      .panel-body {
        padding: 7px;
      }
      span {
        padding: 4px 7px;
        border-style: solid;
        border-color: black;
        border-width: 1px;
        border-left: 1px;
        margin-left: -4px !important;
      }
      span.first {
        margin-left: 3px !important;
        border-left: 1px solid black;
      }

      .signature_date span {
        padding: 4px 12px;
        border-style: solid;
        border-color: black;
        border-width: 1px;
        border-left: 1px;
        margin-left: -4px !important;
      }
      span.padding-date {
        padding: 4px 14px;
      }
      .signature_date span.first {
        margin-left: 3px !important;
        border-left: 1px solid black;
      }
      .panel-border {
        border-bottom: 1px solid black;
        border-right: 1px solid black;
        border-left: 1px solid black;
      }
      .panel-no-margin {
        margin-bottom: 0px;
      }
      .border-label {
        border-bottom: 1px solid black;
        border-right: 1px solid black;
        border-left: 1px solid black;
      }
      .panel-label {
        padding:3px;
        border: 1px solid black;
        width:100%;
        margin-bottom: 1px;
      }
      .panel-label-dotted {
        border-bottom: 1px dotted black;
        border-right: 1px dotted black;
        border-left: 1px dotted black;
      }
      .panel-margin-top {
        margin-top: 12px;
      }
      #panel-top-bottom-dotted {
        border-bottom: 1px dotted black;
        border-top: 1px dotted black;
        border-right: 1px dotted black;
        border-left: 1px dotted black;
        padding:6px;
        width:100%;
      }
      .table-borderless tbody tr td{
        border: 0;
        padding: 3px;
      }
      .table-border thead tr th,
      .table-border thead:first-child tr:first-child th,
      .table-border tbody tr td {
        border: 1px solid black;
      }
      .panel-border {
        border-color: black;
        border-radius: 0px;
      }
      .panel-borderless {
        border: 0;
        border-radius: 0;
      }
      .panel-padding {
        padding: 10px 5px;
      }
      .panel-no-padding {
        padding: 0;
      }
      .panel-no-margin {
        margin: 0;
      }
      .no-border-bottom {
        border-bottom: 0;
      }
      .no-margin-bottom {
        margin-bottom: 0;
      }
      .bottom-radius {
        border-top: 0;
        border-radius: 0;
        border-bottom-left-radius: 3px; 
        border-bottom-right-radius: 3px;
      }
      .top-radius {
        border-bottom: 0;
        border-radius: 0;
        border-top-left-radius: 3px; 
        border-top-right-radius: 3px;
      }
      

  %body{ style: 'background-color:#fff;padding-bottom:20px;padding-left:40px;padding-right:40px;', onload: 'pageNumber()' }
    = yield
