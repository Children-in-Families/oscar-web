#family-custom-csi-tools.tab-pane{role: "tabpanel"}
  .row
    .col-xs-12
      .ibox
        .ibox-title.domain-ibox
          %h5= @family_custom_domains.size
          %span.label.label-info= t('.domains')
          .ibox-tools
            - if can? :manage, Domain
              = link_to new_domain_path(domain_type: 'family') do
                .btn.btn.btn-primary.btn-add
                  = t('.add_new_domain')
        = render partial: 'domain_list', collection: @family_custom_domains, as: :domain
        .text-center
          = paginate @family_custom_domains, params: { tab: 'family-custom-domain' }, :param_name => 'page_2'
