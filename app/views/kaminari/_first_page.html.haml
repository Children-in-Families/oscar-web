%li
  - unless current_page.first?
    - if params[:controller] == 'clients' || params[:controller] == 'families'
      = button_to raw(t 'views.pagination.first'), advanced_search_url_dynamic, params: request.parameters.merge(page: 1), :remote => remote, form_class: 'hidden-post-form'
  - else
    = link_to_unless current_page.first?, raw(t 'views.pagination.first'), url, :remote => remote
