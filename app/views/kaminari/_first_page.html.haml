%li
  - unless current_page.first?
    - if params[:controller] == 'clients'
      = button_to raw(t 'views.pagination.first'), ad_search_clients_path, params: params.merge(page: 1), :remote => remote, form_class: 'hidden-post-form'
    - if params[:controller] == 'families'
      = button_to raw(t 'views.pagination.first'), advanced_search_families_path, params: params.merge(page: 1), :remote => remote, form_class: 'hidden-post-form'
  - else
    = link_to_unless current_page.first?, raw(t 'views.pagination.first'), url, :remote => remote
