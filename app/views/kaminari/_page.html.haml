- _method = params[:controller] == 'clients' ? 'post' : 'get'
- if page.current?
  %li.active
    = content_tag :a, page, remote: remote, rel: (page.next? ? 'next' : (page.prev? ? 'prev' : nil)), method: _method
- else
  %li
    = link_to page, url, remote: remote, rel: (page.next? ? 'next' : (page.prev? ? 'prev' : nil)), method: _method
