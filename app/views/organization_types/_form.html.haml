= simple_form_for(organization_type ||= OrganizationType.new) do |f|
  .modal.fade{id: "organization_typeModal-#{organization_type.id}", "aria-labelledby" => "organization_typeModal-#{organization_type.id}Label", :role => "dialog", :tabindex => "-1"}
    .modal-dialog{:role => "document"}
      .modal-content
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %h4.modal-title{ id: "organization_typeModal-#{organization_type.id}Label" }= t('.organization_type')
        .modal-body
          = error_notification(f)
          .form-inputs
            = f.input :name, label: t('.name')
        .modal-footer
          .pull-left
            = f.submit t('.save') , class: 'btn btn-primary form-btn', data: { disable_with: t('saving') }
            %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"}= t('.cancel')
