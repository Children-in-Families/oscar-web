.row
  .col-xs-12
    .ibox
      .ibox-title
        %h5= "Enrollment Form #{ date_format @client_enrollment.created_at }"
        .ibox-tools
          = link_to edit_client_client_enrollment_path(@client, @client_enrollment, program_stream_id: @program_stream) do
            .btn.btn-success.btn-outline
              = fa_icon('pencil')
          = link_to client_client_enrollment_path(@client, @client_enrollment, program_stream_id: @program_stream), method: :delete, data: { confirm: t('.are_you_sure')}, class: "btn btn-danger btn-outline #{disable_client_enrollment_button(@client_enrollment)}" do
            = fa_icon('trash')
      .ibox-content
        .table-responsive
          %table.table.table-bordered
            - @client_enrollment.properties.each do |key, value|
              %tr
                %td.align-justify
                  = key.titleize
                %td.align-justify
                  = display_custom_properties(value)
      .ibox-footer
        = link_to t('.back'), report_client_client_enrollments_path(@client, program_stream_id: @program_stream), class: 'btn btn-default form-btn'
