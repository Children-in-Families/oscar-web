- if can? :manage, ClientEnrollment
  - if enroll?(@client, object)
    - if object.quantity.present? && active_programs(@client, object).size >= object.quantity
      .label.label-info= t('.full_program')
    - else
      = link_to new_client_client_enrollment_path(@client, program_stream_id: object.id) do
        .btn.btn-primary.btn-xs= t('.enroll')
  - else
    = link_to client_client_enrollment_client_enrollment_trackings_path(@client, object.client_enrollments.enrollments_by(@client).last) do
      .btn.btn-primary.btn-xs= t('.tracking')
    = link_to new_client_client_enrollment_leave_program_path(@client, object.client_enrollments.enrollments_by(@client).last) do
      .btn.btn-danger.btn-xs= t('.exit')
