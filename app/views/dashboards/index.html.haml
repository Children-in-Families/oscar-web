#home-index
  - if @referral_sources.any? && @current_user.admin?
    %p.check-ref-sources.hide referral_sources

  = render 'dashboards/referral_source_category_reminder'
  .row
    = render 'active_tasks_side'
    = render 'multiple_forms'
    = render 'client'
  .row
    = render 'client_program_stream_by_gender'
  .row
    - if can? :read, Family
      = render 'family'
    = render 'third_party'
#program-stream-service
  #program-stream-service-modal{class: just_signed_in ? 'modal inmodal fade just-login' : 'modal inmodal fade just-login', "aria-hidden" => just_signed_in ? 'false' : 'true', :role => "dialog", :tabindex => "-1", data: {show: 'true', backdrop: 'static', keyboard: 'false'} }
    .modal-dialog.modal-lg
      .modal-content
        .modal-header
          %button.close{"data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
            %span.sr-only Close
          %h4.modal-title= t('.program_stream')
          %small.font-bold Please add 'Type of services' to each progra stream.
        .modal-body
          - @program_streams.each do |object|
            = simple_form_for object, remote: true, html: { class: 'program-stream' } do |f|
              .row
                .col.col-md-3
                  = f.input :name, label: t('.name')
                .col.col-md-8
                  .type-of-service{ data: {custom: services.to_json } }
                    = f.association :services, collection: services, multiple: true, label: t('.type_of_service'), input_html: {id: "program_stream_service_id_#{object.id}" }
                .col.col-md-1
                  = f.submit t('save'), class: 'btn btn-primary form-btn', data: { disable_with: t('saving') }

        .modal-footer
          %button.btn.btn-white{"data-dismiss" => "modal", :type => "button"}
            = t('.remind_me')

