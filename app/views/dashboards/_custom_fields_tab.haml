#custom-fields.tab-pane.margin-top-datatable{ role: 'tabpanel' }
  %div
    %h2.text-center Which form would you like to add?
    %ul.nav.nav-tabs{role: "tablist"}
      %li.active{role: "presentation"}
        %a{"data-toggle": "tab", href: "#client", role: "tab"}
          = t('.client')
      %li{role: "presentation"}
        %a{"data-toggle": "tab", href: "#family", role: "tab"}
          = t('.family')
      %li{role: "presentation"}
        %a{"data-toggle": "tab", href: "#partner", role: "tab"}
          = t('.partner')
      %li{role: "presentation"}
        %a{"data-toggle": "tab", href: "#user", role: "tab"}
          = t('.user')
    .tab-content
      = render 'client_tab'
      = render 'family_tab'
      = render 'partner_tab'
      = render 'user_tab'
