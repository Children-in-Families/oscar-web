.col-xs-12.col-md-6
  .panel.panel-default.family-panel
    .panel-body
      = link_to families_path('family_grid[status]': 'Active') do
        .widget.style1.widget-family-panel
          .row.vertical-align
            .col-xs-5
              %i.fa.fa-users.fa-3x
            .col-xs-7.text-right
              %span.text-font
                = t('.families')
              %h2.font-bold #{@dashboard.family_count}
      .row
        .col-xs-12
          #family-type{ 'data-content-count' => @dashboard.family_type_statistic.to_json }
