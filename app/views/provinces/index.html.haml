.row
  .col-xs-12
    .container
      .row
        .col-xs-12
          = link_to t('.add_new_province'), new_province_path, class: 'btn btn-success btn-add'
      .row
        .col-xs-12
          .panel.panel-default
            .panel-heading
              %h3= t('.provinces')
            .panel-body
              .table-responsive
                %table.table.table-bordered.table-striped.table-hover
                  %thead
                    %tr
                      %th= t('.province_names')
                      %th.text-center.custom_column_manage{:colspan => "2"}
                        = t('.manage')
                  %tbody
                    - @provinces.each do |province|
                      %tr
                        %td{style: 'width: 80%;'}
                          = province.name
                        %td.text-center
                          = link_to edit_province_path(province) do
                            %i.glyphicon.glyphicon-pencil
                        %td.text-center
                          - if province.removeable?
                            = link_to province, method: 'delete', data: { confirm: t('.are_you_sure') } do
                              %i.glyphicon.glyphicon-trash
                          - else
                            %i.glyphicon.glyphicon-trash
      .row
        .col-xs-12.text-center
          = will_paginate @provinces, renderer: BootstrapPagination::Rails
